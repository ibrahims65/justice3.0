<!DOCTYPE html>
<html>
<head>
  <title>Investigators</title>
  <link rel="stylesheet" href="/css/input.css">
</head>
<body>
  <div class="container mx-auto p-4">
    <h1 class="text-2xl font-bold mb-4">Investigators</h1>
    <a href="/admin/investigators/new" class="bg-blue-500 text-white p-2 rounded mb-4 inline-block">New Investigator</a>
    <table class="w-full border">
      <thead>
        <tr>
          <th class="border p-2">Name</th>
          <th class="border p-2">Badge Number</th>
          <th class="border p-2">Rank</th>
        </tr>
      </thead>
      <tbody>
        <% investigators.forEach(investigator => { %>
          <tr>
            <td class="border p-2"><%= investigator.name %></td>
            <td class="border p-2"><%= investigator.badgeNumber %></td>
            <td class="border p-2"><%= investigator.rank %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>
