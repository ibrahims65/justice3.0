<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Jurisdiction Management</title>
    <link href="/css/miller.css" rel="stylesheet">
</head>
<body>
    <%- include('../partials/navbar', { user: user, page: page }) %>
    <div class="miller-container">
        <div class="miller-column" id="regions-column">
            <div class="miller-header">
                <h2>Regions</h2>
                <button class="add-button" id="add-region-button">+</button>
            </div>
            <ul class="miller-list" id="regions-list"></ul>
        </div>
        <div class="miller-column" id="districts-column">
            <div class="miller-header">
                <h2>Districts</h2>
                <button class="add-button" id="add-district-button" disabled>+</button>
            </div>
            <ul class="miller-list" id="districts-list"></ul>
        </div>
        <div class="miller-column" id="cities-column">
            <div class="miller-header">
                <h2>Cities</h2>
                <button class="add-button" id="add-city-button" disabled>+</button>
            </div>
            <ul class="miller-list" id="cities-list"></ul>
        </div>
        <div class="miller-column" id="facilities-column">
            <div class="miller-header">
                <h2>Facilities</h2>
                <button class="add-button" id="add-facility-button" disabled>+</button>
            </div>
            <div id="facilities-list">
                <h3>Police Stations</h3>
                <ul class="miller-list" id="police-stations-list"></ul>
                <h3>Courts</h3>
                <ul class="miller-list" id="courts-list"></ul>
            </div>
        </div>
    </div>

    <div id="modal" class="modal">
        <div class="modal-content">
            <span class="close-button">&times;</span>
            <h3 id="modal-title"></h3>
            <form id="modal-form">
                <input type="hidden" id="edit-id">
                <input type="hidden" id="parent-id">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" id="name" name="name" required>
                </div>
                <button type="submit">Save</button>
            </form>
        </div>
    </div>

    <script src="/js/jurisdiction.js"></script>
</body>
</html>
