<h1 class="text-2xl font-bold mb-4">Manage Cities</h1>

<a href="/admin/cities/new" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mb-4 inline-block">New City</a>

<table class="min-w-full bg-white">
  <thead>
    <tr>
      <th class="py-2 px-4 border-b">ID</th>
      <th class="py-2 px-4 border-b">Name</th>
      <th class="py-2 px-4 border-b">District</th>
    </tr>
  </thead>
  <tbody>
    <% cities.forEach(city => { %>
      <tr>
        <td class="py-2 px-4 border-b"><%= city.id %></td>
        <td class="py-2 px-4 border-b"><%= city.name %></td>
        <td class="py-2 px-4 border-b"><%= city.district.name %></td>
      </tr>
    <% }) %>
  </tbody>
</table>
