<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User Management</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">
  <%- include('../../partials/navbar', { user: user, page: '/admin/users' }) %>
  <div class="container mx-auto p-8">
    <div class="flex justify-between items-center mb-4">
      <h1 class="text-2xl font-bold">User Management</h1>
      <a href="/admin/users/new" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">New User</a>
    </div>
    <div class="bg-white p-6 rounded-lg shadow-md">
      <table class="w-full">
        <thead>
          <tr>
            <th class="text-left">Username</th>
            <th class="text-left">Role</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% users.forEach(user => { %>
            <tr>
              <td><%= user.username %></td>
              <td><%= user.role.name %></td>
              <td>
                <a href="/admin/users/<%= user.id %>/edit" class="text-blue-500 hover:underline">Edit</a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</body>
</html>
