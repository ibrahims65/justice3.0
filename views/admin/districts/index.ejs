<h1 class="text-2xl font-bold mb-4">Manage Districts</h1>

<a href="/admin/districts/new" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mb-4 inline-block">New District</a>

<table class="min-w-full bg-white">
  <thead>
    <tr>
      <th class="py-2 px-4 border-b">ID</th>
      <th class="py-2 px-4 border-b">Name</th>
      <th class="py-2 px-4 border-b">Region</th>
    </tr>
  </thead>
  <tbody>
    <% districts.forEach(district => { %>
      <tr>
        <td class="py-2 px-4 border-b"><%= district.id %></td>
        <td class="py-2 px-4 border-b"><%= district.name %></td>
        <td class="py-2 px-4 border-b"><%= district.region.name %></td>
      </tr>
    <% }) %>
  </tbody>
</table>
