<h1 class="text-2xl font-bold mb-4">Manage Regions</h1>

<a href="/admin/regions/new" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mb-4 inline-block">New Region</a>

<table class="min-w-full bg-white">
  <thead>
    <tr>
      <th class="py-2 px-4 border-b">ID</th>
      <th class="py-2 px-4 border-b">Name</th>
    </tr>
  </thead>
  <tbody>
    <% regions.forEach(region => { %>
      <tr>
        <td class="py-2 px-4 border-b"><%= region.id %></td>
        <td class="py-2 px-4 border-b"><%= region.name %></td>
      </tr>
    <% }) %>
  </tbody>
</table>
