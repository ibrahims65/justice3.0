<!DOCTYPE html>
<html>
<head>
  <title>New Investigation</title>
  <link rel="stylesheet" href="/css/input.css">
</head>
<body>
  <div class="container mx-auto p-4">
    <h1 class="text-2xl font-bold mb-4">New Investigation</h1>
    <form action="/investigations" method="POST" enctype="multipart/form-data">
      <input type="hidden" name="caseId" value="<%= caseId %>">
      <div class="mb-4">
        <label for="investigatorId" class="block text-gray-700">Investigator</label>
        <select name="investigatorId" id="investigatorId" class="w-full border rounded p-2">
          <% investigators.forEach(investigator => { %>
            <option value="<%= investigator.id %>"><%= investigator.name %> - <%= investigator.badgeNumber %></option>
          <% }) %>
        </select>
      </div>
      <div class="mb-4">
        <label for="details" class="block text-gray-700">Details</label>
        <textarea name="details" id="details" class="w-full border rounded p-2"></textarea>
      </div>
      <div class="mb-4">
        <label for="media" class="block text-gray-700">Media (Video, Audio, Images)</label>
        <input type="file" name="media" id="media" multiple>
      </div>
      <button type="submit" class="bg-blue-500 text-white p-2 rounded">Create Investigation</button>
    </form>
  </div>
</body>
</html>
