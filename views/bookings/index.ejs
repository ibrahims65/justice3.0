<%- include('../partials/header', { title: 'All Bookings', user: user, page: '/bookings' }) %>
<div class="container mx-auto p-8">
  <div class="bg-white p-6 rounded-lg shadow-md">
    <table class="w-full">
        <thead>
          <tr>
            <th class="text-left">Person</th>
            <th class="text-left">Status</th>
            <th class="text-left">Charges</th>
            <th class="text-left">Booking Date</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% bookings.forEach(booking => { %>
            <tr>
              <td><a href="/people/<%= booking.person.id %>" class="text-blue-500 hover:underline"><%= booking.person.name %></a></td>
              <td><%= booking.status %></td>
              <td><%= booking.charges %></td>
              <td><%= booking.bookingDate.toLocaleString() %></td>
              <td>
                <a href="/cases/new/<%= booking.id %>" class="text-blue-500 hover:underline">Create Case</a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</body>
</html>
