<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>New Booking</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">
  <div class="max-w-4xl mx-auto py-6 sm:px-6 lg:px-8">
    <div class="bg-white rounded-lg shadow-md p-8">
      <h2 class="text-2xl font-bold text-gray-800 mb-8">New Booking</h2>
      <% if (typeof errors !== 'undefined') { %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
          <ul>
            <% errors.forEach(error => { %>
              <li><%= error.msg %></li>
            <% }) %>
          </ul>
        </div>
      <% } %>
      <form action="/people/<%= personId %>/bookings" method="POST">
        <div class="mb-4">
          <label for="charges" class="block text-gray-700 text-sm font-bold mb-2">Charges</label>
          <textarea name="charges" id="charges" rows="4" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"><%= typeof charges !== 'undefined' ? charges : '' %></textarea>
        </div>
        <div class="mb-4">
          <label for="policeStationId" class="block text-gray-700 text-sm font-bold mb-2">Police Station</label>
          <select name="policeStationId" id="policeStationId" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" required>
            <% policeStations.forEach(station => { %>
              <option value="<%= station.id %>" <%= typeof policeStationId !== 'undefined' && policeStationId == station.id ? 'selected' : '' %>><%= station.name %></option>
            <% }) %>
          </select>
        </div>
        <div class="mb-4">
          <label for="status" class="block text-gray-700 text-sm font-bold mb-2">Status</label>
          <input type="text" name="status" id="status" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" value="New Booking" readonly>
        </div>
        <div class="mt-6">
          <label for="arrestingOfficerName" class="block text-gray-700 text-sm font-bold mb-2">Arresting Officer Name</label>
          <input type="text" name="arrestingOfficerName" id="arrestingOfficerName" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" value="<%= typeof arrestingOfficerName !== 'undefined' ? arrestingOfficerName : '' %>">
        </div>
        <div class="mt-6">
          <label for="arrestingOfficerRank" class="block text-gray-700 text-sm font-bold mb-2">Arresting Officer Rank</label>
          <input type="text" name="arrestingOfficerRank" id="arrestingOfficerRank" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" value="<%= typeof arrestingOfficerRank !== 'undefined' ? arrestingOfficerRank : '' %>">
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mt-6">
          <div>
            <label for="incarcerationStartDate" class="block text-sm font-medium text-gray-700">Custody Start Date</label>
            <input type="datetime-local" name="incarcerationStartDate" id="incarcerationStartDate" class="mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md">
          </div>
          <div>
            <label for="custodyExpiresAt" class="block text-sm font-medium text-gray-700">Custody End Date</label>
            <input type="datetime-local" name="custodyExpiresAt" id="custodyExpiresAt" class="mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md">
          </div>
        </div>
        <div class="mt-8 flex justify-end">
          <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
            Create Booking
          </button>
        </div>
      </form>
    </div>
  </div>
</body>
</html>
