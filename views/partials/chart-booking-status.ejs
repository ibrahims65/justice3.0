<div class="bg-white p-4 rounded-lg shadow mt-8">
  <h3 class="text-lg font-medium text-gray-500 mb-4">Booking Status</h3>
  <canvas id="bookingStatusChart"></canvas>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const ctx = document.getElementById('bookingStatusChart').getContext('2d');
    new Chart(ctx, {
      type: 'pie',
      data: {
        labels: <%- JSON.stringify(bookingStatusData.labels) %>,
        datasets: [{
          label: 'Booking Status',
          data: <%- JSON.stringify(bookingStatusData.data) %>,
          backgroundColor: [
            'rgba(255, 99, 132, 0.2)',
            'rgba(54, 162, 235, 0.2)',
            'rgba(255, 206, 86, 0.2)',
            'rgba(75, 192, 192, 0.2)',
            'rgba(153, 102, 255, 0.2)',
            'rgba(255, 159, 64, 0.2)'
          ],
          borderColor: [
            'rgba(255, 99, 132, 1)',
            'rgba(54, 162, 235, 1)',
            'rgba(255, 206, 86, 1)',
            'rgba(75, 192, 192, 1)',
            'rgba(153, 102, 255, 1)',
            'rgba(255, 159, 64, 1)'
          ],
          borderWidth: 1
        }]
      },
      options: {
        responsive: true,
        plugins: {
          legend: {
            position: 'top',
          },
          title: {
            display: true,
            text: 'Booking Status Distribution'
          }
        }
      },
    });
  });
</script>
