  <div class="bg-white p-4 rounded-lg shadow">
    <h3 class="text-lg font-medium text-gray-500">Active Cases</h3>
    <p class="text-3xl font-bold text-gray-900"><%= stats.active %></p>
  </div>
  <div class="bg-white p-4 rounded-lg shadow">
    <h3 class="text-lg font-medium text-gray-500">Total Cases</h3>
    <p class="text-3xl font-bold text-gray-900"><%= stats.total %></p>
  </div>
  <div class="bg-white p-4 rounded-lg shadow">
    <h3 class="text-lg font-medium text-gray-500">Registered Persons</h3>
    <p class="text-3xl font-bold text-gray-900"><%= stats.registered %></p>
  </div>
</div>
