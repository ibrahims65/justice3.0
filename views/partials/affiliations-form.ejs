<form action="/police/cases/<%= caseData.id %>/affiliations" method="POST" class="space-y-4">
    <div>
        <label for="organization" class="block text-sm font-medium text-gray-700">Organization</label>
        <input type="text" name="organization" id="organization" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm">
    </div>
    <div>
        <label for="role" class="block text-sm font-medium text-gray-700">Role</label>
        <input type="text" name="role" id="role" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm">
    </div>
    <div>
        <label for="status" class="block text-sm font-medium text-gray-700">Status</label>
        <select name="status" id="status" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm">
            <option>Active</option>
            <option>Inactive</option>
        </select>
    </div>
    <div>
        <label for="startDate" class="block text-sm font-medium text-gray-700">Start Date</label>
        <input type="date" name="startDate" id="startDate" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm">
    </div>
    <div>
        <label for="endDate" class="block text-sm font-medium text-gray-700">End Date</label>
        <input type="date" name="endDate" id="endDate" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm">
    </div>
    <div>
        <label for="evidenceLink" class="block text-sm font-medium text-gray-700">Evidence Link</label>
        <input type="text" name="evidenceLink" id="evidenceLink" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm">
    </div>
    <button type="submit" class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700">Add Affiliation</button>
</form>
