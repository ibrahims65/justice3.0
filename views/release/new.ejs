<%- include('../partials/header', { title: 'New Release', user: user, page: '/release' }) %>
<div class="container mx-auto p-8">
  <h1 class="text-2xl font-bold mb-4">New Release for Booking #<%= bookingId %></h1>
  <form action="/release" method="POST">
      <input type="hidden" name="bookingId" value="<%= bookingId %>">
      <div class="bg-white p-6 rounded-lg shadow-md">
        <div class="mb-4">
          <label for="reason" class="block text-gray-700">Reason</label>
          <select name="reason" id="reason" class="w-full border rounded p-2" required>
            <option value="Insufficient Evidence">Insufficient Evidence</option>
            <option value="Mistaken Identity">Mistaken Identity</option>
            <option value="Medical Emergency">Medical Emergency</option>
            <option value="Other">Other</option>
          </select>
        </div>
        <div class="mb-4">
          <label for="notes" class="block text-gray-700">Notes</label>
          <textarea name="notes" id="notes" class="w-full border rounded p-2"></textarea>
        </div>
        <button type="submit" class="bg-blue-500 text-white p-2 rounded">Release</button>
      </div>
    </form>
  </div>
</body>
</html>
