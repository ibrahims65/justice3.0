<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Corrections</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">
  <div class="container mx-auto p-8">
    <h1 class="text-2xl font-bold mb-4">Inmate Search</h1>
    <form action="/corrections" method="GET" class="mb-4 flex space-x-2">
      <input type="text" name="search" placeholder="Search by name or case number..." class="border rounded p-2 flex-grow">
      <input type="text" name="facility" placeholder="Facility Name" class="border rounded p-2">
      <button type="submit" class="bg-blue-500 text-white p-2 rounded">Search</button>
    </form>

    <div class="bg-white p-6 rounded-lg shadow-md">
      <h2 class="text-xl font-bold mb-4">Inmates</h2>
      <table class="w-full">
        <thead>
          <tr>
            <th class="text-left">Name</th>
            <th class="text-left">Case Number</th>
            <th class="text-left">Facility</th>
            <th class="text-left">Release Date</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% people.forEach(person => { %>
            <% person.bookings.forEach(booking => { %>
              <tr>
                <td><%= person.name %></td>
                <td><%= booking.case.caseNumber %></td>
                <td><%= booking.facilityName %></td>
                <td><%= booking.releaseDate ? new Date(booking.releaseDate).toLocaleDateString() : 'N/A' %></td>
                <td>
                  <a href="/corrections/inmates/<%= person.id %>" class="text-blue-500 hover:underline">View Profile</a>
                </td>
              </tr>
            <% }) %>
          <% }) %>
        </tbody>
      </table>
      <button id="load-more" class="bg-blue-500 text-white p-2 rounded mt-4">Load More</button>
      <script>
        let page = 2;
        const loadMoreButton = document.getElementById('load-more');
        const peopleTableBody = document.querySelector('table tbody');

        loadMoreButton.addEventListener('click', async () => {
          const response = await fetch(`/corrections?page=${page}`);
          const newPeople = await response.text();
          const newPeopleHtml = new DOMParser().parseFromString(newPeople, 'text/html');
          const newPeopleTableBody = newPeopleHtml.querySelector('table tbody');
          peopleTableBody.innerHTML += newPeopleTableBody.innerHTML;
          page++;
        });
      </script>
    </div>
  </div>
</body>
</html>
