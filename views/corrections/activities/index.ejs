<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Activity Management</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">
  <%- include('../../partials/navbar', { user: user, page: '/corrections/activities' }) %>
  <div class="container mx-auto p-8">
    <div class="flex justify-between items-center mb-4">
      <h1 class="text-2xl font-bold">Activity Management</h1>
      <a href="/corrections/activities/new" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">New Activity</a>
    </div>
    <div class="bg-white p-6 rounded-lg shadow-md">
      <table class="w-full">
        <thead>
          <tr>
            <th class="text-left">Name</th>
            <th class="text-left">Start Time</th>
            <th class="text-left">End Time</th>
            <th class="text-left">Inmate</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% activities.forEach(activity => { %>
            <tr>
              <td><%= activity.name %></td>
              <td><%= new Date(activity.startTime).toLocaleString() %></td>
              <td><%= new Date(activity.endTime).toLocaleString() %></td>
              <td><%= activity.booking.person.name %></td>
              <td>
                <a href="/corrections/activities/<%= activity.id %>/edit" class="text-blue-500 hover:underline">Edit</a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</body>
</html>
