<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Corrections Reports</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body class="bg-gray-100">
  <%- include('../partials/navbar', { user: user, page: '/corrections/reports' }) %>
  <div class="container mx-auto p-8">
    <h1 class="text-2xl font-bold mb-4">Corrections Reports</h1>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      <div class="bg-white p-6 rounded-lg shadow-md">
        <h2 class="text-xl font-bold mb-4">Inmate Population by Facility</h2>
        <canvas id="populationChart"></canvas>
      </div>
      <div class="bg-white p-6 rounded-lg shadow-md">
        <h2 class="text-xl font-bold mb-4">Disciplinary Actions by Infraction</h2>
        <canvas id="disciplinaryChart"></canvas>
      </div>
    </div>
    <div class="mt-8 bg-white p-6 rounded-lg shadow-md">
      <h2 class="text-xl font-bold mb-4">Visitation Logs</h2>
      <table class="min-w-full bg-white">
        <thead>
          <tr>
            <th class="py-2 px-4 border-b">Inmate</th>
            <th class="py-2 px-4 border-b">Visitor</th>
            <th class="py-2 px-4 border-b">Date</th>
          </tr>
        </thead>
        <tbody>
          <% visitationLogs.forEach(log => { %>
            <tr>
              <td class="py-2 px-4 border-b"><%= log.booking.person.name %></td>
              <td class="py-2 px-4 border-b"><%= log.visitorName %></td>
              <td class="py-2 px-4 border-b"><%= new Date(log.date).toLocaleString() %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>

  <script>
    const populationData = <%- JSON.stringify(populationByFacility) %>;
    const populationCtx = document.getElementById('populationChart').getContext('2d');
    new Chart(populationCtx, {
      type: 'bar',
      data: {
        labels: Object.keys(populationData),
        datasets: [{
          label: 'Inmate Population',
          data: Object.values(populationData),
          backgroundColor: 'rgba(54, 162, 235, 0.7)',
        }]
      },
      options: {
        scales: {
          y: {
            beginAtZero: true
          }
        }
      }
    });

    const disciplinaryData = <%- JSON.stringify(disciplinaryActionsByInfraction) %>;
    const disciplinaryCtx = document.getElementById('disciplinaryChart').getContext('2d');
    new Chart(disciplinaryCtx, {
      type: 'pie',
      data: {
        labels: Object.keys(disciplinaryData),
        datasets: [{
          label: 'Disciplinary Actions',
          data: Object.values(disciplinaryData),
          backgroundColor: [
            'rgba(255, 99, 132, 0.7)',
            'rgba(54, 162, 235, 0.7)',
            'rgba(255, 206, 86, 0.7)',
            'rgba(75, 192, 192, 0.7)',
            'rgba(153, 102, 255, 0.7)',
            'rgba(255, 159, 64, 0.7)'
          ],
        }]
      }
    });
  </script>
</body>
</html>
