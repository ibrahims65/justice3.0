<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Hearings</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">
  <%- include('../partials/navbar', { user: user, page: '/hearings' }) %>
  <div class="container mx-auto p-8">
    <h1 class="text-2xl font-bold mb-4">All Hearings</h1>
    <div class="bg-white p-6 rounded-lg shadow-md">
      <table class="w-full">
        <thead>
          <tr>
            <th class="text-left">Case</th>
            <th class="text-left">Person</th>
            <th class="text-left">Court</th>
            <th class="text-left">Hearing Date</th>
            <th class="text-left">Verdict</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% hearings.forEach(hearing => { %>
            <tr>
              <td><a href="/cases/<%= hearing.case.id %>" class="text-blue-500 hover:underline"><%= hearing.case.caseNumber %></a></td>
              <td><a href="/people/<%= hearing.case.booking.person.id %>" class="text-blue-500 hover:underline"><%= hearing.case.booking.person.name %></a></td>
              <td><%= hearing.court.name %></td>
              <td><%= hearing.hearingDate.toLocaleString() %></td>
              <td><%= hearing.verdict || 'N/A' %></td>
              <td>
                <a href="/cases/<%= hearing.case.id %>" class="text-blue-500 hover:underline">View Case</a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</body>
</html>
