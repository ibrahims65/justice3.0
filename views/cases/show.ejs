<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Case Details</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">
  <%- include('../partials/navbar', { user: user }) %>
  <div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
    <div class="bg-white rounded-lg shadow-md p-8">
      <div class="flex justify-between items-start">
        <div>
          <h2 class="text-3xl font-bold text-gray-800"><%= caseRecord.caseNumber %></h2>
          <p class="text-lg text-gray-600"><%= caseRecord.status %></p>
        </div>
        <div class="text-right">
          <p class="text-gray-600">Booking Date: <%= caseRecord.booking.bookingDate.toLocaleString() %></p>
          <a href="/cases/<%= caseRecord.id %>/edit" class="text-blue-500 hover:underline">Edit Case Details</a>
        </div>
      </div>

      <div class="mt-8">
        <h3 class="text-xl font-bold text-gray-800 mb-4">Case Details</h3>
        <p><strong>Crime Scene Details:</strong> <%= caseRecord.crimeSceneDetails %></p>
        <p><strong>Interrogation Logs:</strong> <%= caseRecord.interrogationLogs %></p>
        <p><strong>Preliminary Findings:</strong> <%= caseRecord.preliminaryFindings %></p>
      </div>

      <div class="mt-8 grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="md:col-span-2">
          <div class="bg-gray-50 rounded-lg p-6">
            <h3 class="text-xl font-bold text-gray-800 mb-4">Person Details</h3>
            <div class="flex items-center">
              <% if (caseRecord.booking.person.photoUrl) { %>
                <img src="<%= caseRecord.booking.person.photoUrl %>" alt="Person Photo" class="w-24 h-24 rounded-full mr-8">
              <% } %>
              <div>
                <p><strong>Name:</strong> <%= caseRecord.booking.person.name %></p>
                <p><strong>Date of Birth:</strong> <%= caseRecord.booking.person.dob.toDateString() %></p>
              </div>
            </div>
          </div>

          <div class="mt-8 bg-gray-50 rounded-lg p-6">
            <h3 class="text-xl font-bold text-gray-800 mb-4">Evidence</h3>
            <% if (user.role.name === 'Police') { %>
            <a href="/evidence/new/<%= caseRecord.id %>" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mb-4 inline-block">Add Evidence</a>
            <% } %>
            <ul>
              <% caseRecord.evidence.sort((a, b) => b.version - a.version).forEach(item => { %>
                <li class="border-b border-gray-200 py-2">
                  <p><%= item.description %> (v<%= item.version %>)</p>
                  <a href="<%= item.fileUrl %>" class="text-blue-500 hover:underline">View File</a>
                  <p class="text-sm text-gray-600">Tags: <%= item.tags %></p>
                  <form action="/evidence/<%= item.id %>/new-version" method="POST" enctype="multipart/form-data" class="mt-2">
                    <input type="file" name="file" required>
                    <button type="submit" class="bg-yellow-500 text-white p-1 rounded">Upload New Version</button>
                  </form>
                </li>
              <% }) %>
            </ul>
          </div>

          <div class="mt-8 bg-gray-50 rounded-lg p-6">
            <h3 class="text-xl font-bold text-gray-800 mb-4">Victims</h3>
            <% if (user.role.name === 'Police') { %>
            <a href="/victims/new/<%= caseRecord.id %>" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mb-4 inline-block">Add Victim</a>
            <% } %>
            <ul>
              <% caseRecord.victims.forEach(victim => { %>
                <li class="border-b border-gray-200 py-2">
                  <p><strong><%= victim.name %></strong></p>
                  <p><%= victim.statement %></p>
                </li>
              <% }) %>
            </ul>
          </div>

          <div class="mt-8 bg-gray-50 rounded-lg p-6">
            <h3 class="text-xl font-bold text-gray-800 mb-4">Witnesses</h3>
            <% if (user.role.name === 'Police') { %>
            <a href="/witnesses/new/<%= caseRecord.id %>" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mb-4 inline-block">Add Witness</a>
            <% } %>
            <ul>
              <% caseRecord.witnesses.forEach(witness => { %>
                <li class="border-b border-gray-200 py-2">
                  <p><strong><%= witness.name %>:</strong> <%= witness.statement %></p>
                </li>
              <% }) %>
            </ul>
          </div>

          <% if (user.role.name === 'Court' || user.role.name === 'Prosecutor') { %>
          <div class="mt-8 bg-gray-50 rounded-lg p-6">
            <h3 class="text-xl font-bold text-gray-800 mb-4">Hearings</h3>
            <% if (caseRecord.status === 'Accepted' && user.role.name === 'Court') { %>
              <a href="/hearings/new/<%= caseRecord.id %>" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mb-4 inline-block">Schedule Hearing</a>
            <% } %>
            <ul>
              <% caseRecord.hearings.forEach(hearing => { %>
                <li class="border-b border-gray-200 py-2">
                  <p><strong><%= hearing.court %> on <%= hearing.hearingDate.toDateString() %></strong></p>
                  <% if (hearing.verdict) { %>
                    <p>Verdict: <%= hearing.verdict %></p>
                  <% } else if (user.role.name === 'Court') { %>
                    <form action="/hearings/<%= hearing.id %>/verdict" method="POST" class="mt-2">
                      <select name="verdict" class="border border-gray-300 p-1 rounded">
                        <option value="Convicted">Convicted</option>
                        <option value="Acquitted">Acquitted</option>
                      </select>
                      <button type="submit" class="bg-blue-500 text-white p-1 rounded">Record Verdict</button>
                    </form>
                  <% } %>
                </li>
              <% }) %>
            </ul>
          </div>
          <% } %>
        </div>

        <div>
          <div class="bg-gray-50 rounded-lg p-6">
            <h3 class="text-xl font-bold text-gray-800 mb-4">Actions</h3>
            <% if ((caseRecord.status === 'New Arrest' || caseRecord.status === 'Information Requested') && user.role.name === 'Police') { %>
              <form action="/cases/<%= caseRecord.id %>/submit" method="POST" class="mb-4">
                <button type="submit" class="w-full bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded">Submit to Prosecutor</button>
              </form>
            <% } %>
            <% if (caseRecord.status === 'Prosecutor Review' && user.role.name === 'Prosecutor') { %>
              <form action="/cases/<%= caseRecord.id %>/submit-to-court" method="POST" class="mb-2">
                <button type="submit" class="w-full bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Submit to Court</button>
              </form>
              <form action="/cases/<%= caseRecord.id %>/request-info" method="POST">
                <textarea name="notes" placeholder="Reason for requesting more info" class="w-full border rounded p-2 mb-2"></textarea>
                <button type="submit" class="w-full bg-yellow-500 hover:bg-yellow-700 text-white font-bold py-2 px-4 rounded">Request More Info</button>
              </form>
            <% } %>
            <% if (caseRecord.status === 'Submitted to Court' && user.role.name === 'Court') { %>
              <form action="/cases/<%= caseRecord.id %>/accept" method="POST" class="mb-2">
                <button type="submit" class="w-full bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded">Accept</button>
              </form>
              <form action="/cases/<%= caseRecord.id %>/send-back" method="POST" class="mb-2">
                <textarea name="notes" placeholder="Reason for sending back" class="w-full border rounded p-2 mb-2"></textarea>
                <button type="submit" class="w-full bg-yellow-500 hover:bg-yellow-700 text-white font-bold py-2 px-4 rounded">Send Back</button>
              </form>
              <form action="/cases/<%= caseRecord.id %>/reject" method="POST" class="mb-2">
                <textarea name="notes" placeholder="Reason for rejection" class="w-full border rounded p-2 mb-2"></textarea>
                <button type="submit" class="w-full bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded">Reject</button>
              </form>
            <% } %>
            <% if (caseRecord.status === 'Rejected' && user.role.name === 'Police') { %>
              <form action="/cases/<%= caseRecord.id %>/submit" method="POST" class="mb-4">
                <button type="submit" class="w-full bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded">Resubmit to Prosecutor</button>
              </form>
            <% } %>
          </div>
          <% if (user.role.name === 'Prosecutor' || user.role.name === 'Court') { %>
          <div class="mt-8 bg-gray-50 rounded-lg p-6">
            <h3 class="text-xl font-bold text-gray-800 mb-4">Prosecutor Notes</h3>
            <ul>
              <% caseRecord.prosecutorNotes.forEach(note => { %>
                <li class="border-b border-gray-200 py-2">
                  <p class="text-sm text-gray-600"><%= note.createdAt.toLocaleString() %></p>
                  <p><%= note.content %></p>
                  <p class="text-sm text-gray-500 mt-1">By: <%= note.user.username %></p>
                </li>
              <% }) %>
            </ul>
            <% if (user.role.name === 'Prosecutor') { %>
            <form action="/prosecutor/cases/<%= caseRecord.id %>/notes" method="POST" class="mt-4">
              <textarea name="content" placeholder="Add a note" class="w-full border rounded p-2 mb-2"></textarea>
              <button type="submit" class="w-full bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Add Note</button>
            </form>
            <% } %>
          </div>
          <% } %>
          <div class="mt-8 bg-gray-50 rounded-lg p-6">
            <h3 class="text-xl font-bold text-gray-800 mb-4">Plea Bargains</h3>
            <% if (user.role.name === 'Prosecutor') { %>
            <form action="/plea-bargains" method="POST" class="mb-4">
              <input type="hidden" name="caseId" value="<%= caseRecord.id %>">
              <textarea name="offer" placeholder="Plea bargain offer" class="w-full border rounded p-2 mb-2"></textarea>
              <button type="submit" class="w-full bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Propose Plea Bargain</button>
            </form>
            <% } %>
            <ul>
              <% caseRecord.pleaBargains.forEach(plea => { %>
                <li class="border-b border-gray-200 py-2">
                  <p><strong>Offer:</strong> <%= plea.offer %></p>
                  <p><strong>Status:</strong> <%= plea.status %></p>
                  <% if (plea.status === 'Proposed' && user.role.name === 'Court') { %>
                    <form action="/plea-bargains/<%= plea.id %>/accept" method="POST" class="inline-block">
                      <button type="submit" class="bg-green-500 text-white p-1 rounded">Accept</button>
                    </form>
                    <form action="/plea-bargains/<%= plea.id %>/reject" method="POST" class="inline-block">
                      <button type="submit" class="bg-red-500 text-white p-1 rounded">Reject</button>
                    </form>
                  <% } %>
                </li>
              <% }) %>
            </ul>
          </div>
          <div class="mt-8 bg-gray-50 rounded-lg p-6">
            <h3 class="text-xl font-bold text-gray-800 mb-4">Investigations</h3>
            <a href="/investigations/new/<%= caseRecord.id %>" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mb-4 inline-block">Add Investigation</a>
            <ul>
              <% caseRecord.investigations.forEach(investigation => { %>
                <li class="border-b border-gray-200 py-2">
                  <p><strong>Investigator:</strong> <%= investigation.investigatorName %> (<%= investigation.investigatorBadgeNumber %>)</p>
                  <p><strong>Rank:</strong> <%= investigation.investigatorRank %></p>
                  <p><strong>Details:</strong> <%= investigation.details %></p>
                  <h4 class="font-bold mt-4">Media</h4>
                  <ul>
                    <% investigation.media.forEach(media => { %>
                      <li class="border-t border-gray-200 py-2">
                        <a href="<%= media.url %>" class="text-blue-500 hover:underline" target="_blank"><%= media.type %></a>
                      </li>
                    <% }) %>
                  </ul>
                </li>
              <% }) %>
            </ul>
          </div>
          <div class="mt-8 bg-gray-50 rounded-lg p-6">
            <h3 class="text-xl font-bold text-gray-800 mb-4">Bail Decisions</h3>
            <% if (user.role.name === 'Court') { %>
            <form action="/bail-decisions" method="POST" class="mb-4">
              <input type="hidden" name="caseId" value="<%= caseRecord.id %>">
              <div class="grid grid-cols-2 gap-4">
                <input type="text" name="judgeName" placeholder="Judge Name" class="border rounded p-2">
                <input type="number" name="amount" placeholder="Bail Amount" class="border rounded p-2">
                <select name="status" class="border rounded p-2">
                  <option value="Granted">Granted</option>
                  <option value="Denied">Denied</option>
                  <option value="Revoked">Revoked</option>
                </select>
              </div>
              <textarea name="conditions" placeholder="Bail Conditions" class="w-full border rounded p-2 mt-4"></textarea>
              <button type="submit" class="w-full bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mt-4">Add Bail Decision</button>
            </form>
            <% } %>
            <ul>
              <% caseRecord.bailDecisions.forEach(decision => { %>
                <li class="border-b border-gray-200 py-2">
                  <p><strong>Status:</strong> <%= decision.status %></p>
                  <p><strong>Amount:</strong> <%= decision.amount %></p>
                  <p><strong>Conditions:</strong> <%= decision.conditions %></p>
                  <p><strong>Judge:</strong> <%= decision.judgeName %></p>
                  <p><strong>Date:</strong> <%= decision.decidedAt.toLocaleString() %></p>
                </li>
              <% }) %>
            </ul>
          </div>
          <% if (user.role.name === 'Prosecutor' || user.role.name === 'Court') { %>
          <div class="mt-8 bg-gray-50 rounded-lg p-6">
            <h3 class="text-xl font-bold text-gray-800 mb-4">Prosecutor Evaluation</h3>
            <% if (user.role.name === 'Prosecutor') { %>
            <form action="/cases/<%= caseRecord.id %>/evaluation" method="POST" class="mb-4">
              <div class="mb-4">
                <label for="recommendedCharges" class="block text-gray-700">Recommended Charges</label>
                <input type="text" name="recommendedCharges" id="recommendedCharges" value="<%= caseRecord.recommendedCharges || '' %>" class="w-full border rounded p-2">
              </div>
              <div class="mb-4">
                <label for="riskAssessment" class="block text-gray-700">Risk Assessment</label>
                <input type="text" name="riskAssessment" id="riskAssessment" value="<%= caseRecord.riskAssessment || '' %>" class="w-full border rounded p-2">
              </div>
              <div class="mb-4">
                <label for="evidenceStrengthRating" class="block text-gray-700">Evidence Strength (1-5)</label>
                <input type="number" name="evidenceStrengthRating" id="evidenceStrengthRating" value="<%= caseRecord.evidenceStrengthRating || '' %>" min="1" max="5" class="w-full border rounded p-2">
              </div>
              <button type="submit" class="w-full bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Save Evaluation</button>
            </form>
            <% } else { %>
              <p><strong>Recommended Charges:</strong> <%= caseRecord.recommendedCharges %></p>
              <p><strong>Risk Assessment:</strong> <%= caseRecord.riskAssessment %></p>
              <p><strong>Evidence Strength:</strong> <%= caseRecord.evidenceStrengthRating %></p>
            <% } %>
          </div>
          <% } %>
          <div class="mt-8 bg-gray-50 rounded-lg p-6">
            <h3 class="text-xl font-bold text-gray-800 mb-4">Warrants</h3>
            <% if (user.role.name === 'Court') { %>
            <form action="/warrants" method="POST" class="mb-4">
              <input type="hidden" name="caseId" value="<%= caseRecord.id %>">
              <textarea name="details" placeholder="Warrant Details" class="w-full border rounded p-2 mb-2"></textarea>
              <input type="date" name="expiresAt" class="w-full border rounded p-2 mb-2">
              <button type="submit" class="w-full bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Issue Warrant</button>
            </form>
            <% } %>
            <ul>
              <% caseRecord.warrants.forEach(warrant => { %>
                <li class="border-b border-gray-200 py-2">
                  <p><strong>Status:</strong> <%= warrant.status %></p>
                  <p><strong>Details:</strong> <%= warrant.details %></p>
                  <p><strong>Expires:</strong> <%= warrant.expiresAt.toLocaleString() %></p>
                </li>
              <% }) %>
            </ul>
          </div>
          <div class="mt-8 bg-gray-50 rounded-lg p-6">
            <h3 class="text-xl font-bold text-gray-800 mb-4">Search Warrants</h3>
            <% if (user.role.name === 'Police') { %>
            <form action="/search-warrants" method="POST" class="mb-4">
              <input type="hidden" name="caseId" value="<%= caseRecord.id %>">
              <input type="text" name="location" placeholder="Location to be searched" class="w-full border rounded p-2 mb-2">
              <textarea name="scope" placeholder="Scope of the search" class="w-full border rounded p-2 mb-2"></textarea>
              <button type="submit" class="w-full bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Request Search Warrant</button>
            </form>
            <% } %>
            <ul>
              <% caseRecord.searchWarrants.forEach(warrant => { %>
                <li class="border-b border-gray-200 py-2">
                  <p><strong>Status:</strong> <%= warrant.status %></p>
                  <p><strong>Location:</strong> <%= warrant.location %></p>
                  <p><strong>Scope:</strong> <%= warrant.scope %></p>
                  <% if (warrant.status === 'Requested' && user.role.name === 'Court') { %>
                    <form action="/search-warrants/<%= warrant.id %>/approve" method="POST" class="inline-block">
                      <button type="submit" class="bg-green-500 text-white p-1 rounded">Approve</button>
                    </form>
                    <form action="/search-warrants/<%= warrant.id %>/deny" method="POST" class="inline-block">
                      <button type="submit" class="bg-red-500 text-white p-1 rounded">Deny</button>
                    </form>
                  <% } %>
                </li>
              <% }) %>
            </ul>
          </div>
          <div class="mt-8 bg-gray-50 rounded-lg p-6">
            <h3 class="text-xl font-bold text-gray-800 mb-4">Action History</h3>
            <ul>
              <% caseRecord.actions.forEach(action => { %>
                <li class="border-b border-gray-200 py-2">
                  <p class="text-sm text-gray-600"><%= action.timestamp.toLocaleString() %></p>
                  <p><%= action.action %> by <%= action.user.username %></p>
                  <% if (action.notes) { %>
                    <p class="text-sm text-gray-500 mt-1">Notes: <%= action.notes %></p>
                  <% } %>
                </li>
              <% }) %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
</html>
