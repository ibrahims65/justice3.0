<!DOCTYPE html>
<html>
<head>
  <title>Notifications</title>
  <link rel="stylesheet" href="/css/input.css">
</head>
<body>
  <div class="container mx-auto p-4">
    <h1 class="text-2xl font-bold mb-4">Notifications</h1>
    <ul>
      <% notifications.forEach(notification => { %>
        <li class="border-b border-gray-200 py-4 <%= notification.isRead ? 'text-gray-500' : '' %>">
          <p><%= notification.message %></p>
          <p class="text-sm text-gray-600"><%= notification.createdAt.toLocaleString() %></p>
          <% if (!notification.isRead) { %>
            <form action="/notifications/<%= notification.id %>/read" method="POST" class="mt-2">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>">
              <button type="submit" class="text-blue-500 hover:underline">Mark as Read</button>
            </form>
          <% } %>
        </li>
      <% }) %>
    </ul>
  </div>
</body>
</html>
