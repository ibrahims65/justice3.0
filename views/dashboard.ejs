<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <% if (user.role.name === 'Police') { %>
        <link href="/css/dashboard.css" rel="stylesheet">
    <% } else { %>
        <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <% } %>
</head>
<body>
    <%- include('./partials/navbar', { user: user, page: page }) %>

    <% if (user.role.name === 'Police') { %>
        <div class="command-center">
            <div class="column left-column">
                <div class="card alert-card">
                    <h3>Overdue Holds</h3>
                    <p class="count"><%= overdueHolds %></p>
                    <a href="/police/bookings?status=Overdue">View Overdue Holds</a>
                </div>
                <div class="card assign-card">
                    <h3>New Assignments</h3>
                    <p class="count"><%= newAssignments %></p>
                    <a href="/police/cases?status=New">View New Assignments</a>
                </div>
            </div>
            <div class="column center-column">
                <h3>My Active Cases</h3>
                <% cases.forEach(caseRecord => { %>
                    <div class="card case-card">
                        <h4>Case #<%= caseRecord.caseNumber %></h4>
                        <p><%= caseRecord.booking.person.name %></p>
                        <p>Date of Offense: <%= new Date(caseRecord.booking.bookingDate).toLocaleDateString() %></p>
                        <p><span class="badge badge-<%= caseRecord.status.toLowerCase().replace(' ', '-') %>"><%= caseRecord.status %></span></p>
                        <a href="/cases/<%= caseRecord.id %>">View Case</a>
                    </div>
                <% }) %>
            </div>
            <div class="column right-column">
                <input type="text" class="search-bar" id="live-search" placeholder="Search by Case #, Name, or Badge ID...">
                <div id="search-results"></div>
                <div class="card quick-stats">
                    <h3>Quick Stats</h3>
                    <p>Total Open Cases: <%= totalOpenCases %></p>
                    <p>Warrants Pending: <%= warrantsPending %></p>
                </div>
                <div class="card quick-links">
                    <h3>Quick Links</h3>
                    <a href="/reports/new">Generate Report</a>
                    <a href="/police/bookings">View All Station Bookings</a>
                </div>
            </div>
        </div>
        <script src="/js/live-search.js"></script>
    <% } else if (user.role.name === 'Prosecutor') { %>
        <div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
            <%- include('./partials/breadcrumbs', { breadcrumbs: breadcrumbs }) %>
            <div class="px-4 py-6 sm:px-0">
                <h2 class="text-2xl font-bold text-gray-800 mb-4">Welcome, <%= user.username %>!</h2>
                <p class="text-gray-600 mb-8">Your role is: <%= user.role.name %></p>
                <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                    <div class="bg-white rounded-lg shadow-md p-6">
                        <h3 class="text-lg font-medium text-gray-800">Assigned Cases</h3>
                        <p class="text-3xl font-bold text-blue-500"><%= cases.length %></p>
                    </div>
                    <div class="bg-white rounded-lg shadow-md p-6">
                        <h3 class="text-lg font-medium text-gray-800">Remand Requests</h3>
                        <p class="text-3xl font-bold text-blue-500"><%= remandRequests.length %></p>
                    </div>
                    <div class="bg-white rounded-lg shadow-md p-6">
                        <h3 class="text-lg font-medium text-gray-800">Upcoming Hearings</h3>
                        <p class="text-3xl font-bold text-blue-500"><%= upcomingHearings.length %></p>
                    </div>
                </div>
                <div class="mt-8 bg-white rounded-lg shadow-md p-6">
                    <h3 class="text-lg font-medium text-gray-800 mb-4">Assigned Cases</h3>
                    <% if (cases.length > 0) { %>
                        <table class="w-full text-left">
                            <thead>
                                <tr>
                                    <th class="py-2">Case Number</th>
                                    <th class="py-2">Defendant</th>
                                    <th class="py-2">Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% cases.forEach(caseRecord => { %>
                                    <tr class="border-b border-gray-200">
                                        <td class="py-2"><a href="/cases/<%= caseRecord.id %>" class="text-blue-500 hover:underline"><%= caseRecord.caseNumber %></a></td>
                                        <td class="py-2"><%= caseRecord.booking.person.name %></td>
                                        <td class="py-2"><%= caseRecord.status %></td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    <% } else { %>
                        <p>No cases assigned.</p>
                    <% } %>
                </div>
                <div class="mt-8 bg-white rounded-lg shadow-md p-6">
                    <h3 class="text-lg font-medium text-gray-800 mb-4">Remand Requests</h3>
                    <% if (remandRequests.length > 0) { %>
                        <table class="w-full text-left">
                            <thead>
                                <tr>
                                    <th class="py-2">Case Number</th>
                                    <th class="py-2">Defendant</th>
                                    <th class="py-2">Status</th>
                                    <th class="py-2">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% remandRequests.forEach(remand => { %>
                                    <tr class="border-b border-gray-200">
                                        <td class="py-2"><a href="/cases/<%= remand.booking.case.id %>" class="text-blue-500 hover:underline"><%= remand.booking.case.caseNumber %></a></td>
                                        <td class="py-2"><%= remand.booking.person.name %></td>
                                        <td class="py-2"><%= remand.status %></td>
                                        <td class="py-2">
                                            <a href="/remand/<%= remand.id %>/approve" class="text-green-500 hover:underline">Approve</a>
                                            <a href="/remand/<%= remand.id %>/reject" class="text-red-500 hover:underline ml-4">Reject</a>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    <% } else { %>
                        <p>No remand requests to review.</p>
                    <% } %>
                </div>
            </div>
        </div>
    <% } else if (user.role.name === 'Court') { %>
        <div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
            <%- include('./partials/breadcrumbs', { breadcrumbs: breadcrumbs }) %>
            <div class="px-4 py-6 sm:px-0">
                <h2 class="text-2xl font-bold text-gray-800 mb-4">Welcome, <%= user.username %>!</h2>
                <p class="text-gray-600 mb-8">Your role is: <%= user.role.name %></p>
                <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                    <div class="bg-white rounded-lg shadow-md p-6">
                        <h3 class="text-lg font-medium text-gray-800">Scheduled Hearings</h3>
                        <p class="text-3xl font-bold text-blue-500"><%= hearings.length %></p>
                    </div>
                    <div class="bg-white rounded-lg shadow-md p-6">
                        <h3 class="text-lg font-medium text-gray-800">Cases to Assign</h3>
                        <p class="text-3xl font-bold text-blue-500"><%= casesToAssign.length %></p>
                    </div>
                    <div class="bg-white rounded-lg shadow-md p-6">
                        <h3 class="text-lg font-medium text-gray-800">Warrants to Approve</h3>
                        <p class="text-3xl font-bold text-blue-500"><%= warrantsToApprove.length %></p>
                    </div>
                </div>
                <div class="mt-8 bg-white rounded-lg shadow-md p-6">
                    <h3 class="text-lg font-medium text-gray-800 mb-4">Cases to Assign</h3>
                    <% if (casesToAssign.length > 0) { %>
                        <table class="w-full text-left">
                            <thead>
                                <tr>
                                    <th class="py-2">Case Number</th>
                                    <th class="py-2">Status</th>
                                    <th class="py-2">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% casesToAssign.forEach(caseRecord => { %>
                                    <tr class="border-b border-gray-200">
                                        <td class="py-2"><a href="/cases/<%= caseRecord.id %>" class="text-blue-500 hover:underline"><%= caseRecord.caseNumber %></a></td>
                                        <td class="py-2"><%= caseRecord.status %></td>
                                        <td class="py-2"><a href="/cases/<%= caseRecord.id %>/assign" class="text-blue-500 hover:underline">Assign</a></td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    <% } else { %>
                        <p>No cases to assign.</p>
                    <% } %>
                </div>
                <div class="mt-8 bg-white rounded-lg shadow-md p-6">
                    <h3 class="text-lg font-medium text-gray-800 mb-4">Warrants to Approve</h3>
                    <% if (warrantsToApprove.length > 0) { %>
                        <table class="w-full text-left">
                            <thead>
                                <tr>
                                    <th class="py-2">Case Number</th>
                                    <th class="py-2">Status</th>
                                    <th class="py-2">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% warrantsToApprove.forEach(warrant => { %>
                                    <tr class="border-b border-gray-200">
                                        <td class="py-2"><a href="/cases/<%= warrant.case.id %>" class="text-blue-500 hover:underline"><%= warrant.case.caseNumber %></a></td>
                                        <td class="py-2"><%= warrant.status %></td>
                                        <td class="py-2">
                                            <a href="/warrants/<%= warrant.id %>/approve" class="text-green-500 hover:underline">Approve</a>
                                            <a href="/warrants/<%= warrant.id %>/reject" class="text-red-500 hover:underline ml-4">Reject</a>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    <% } else { %>
                        <p>No warrants to approve.</p>
                    <% } %>
                </div>
                <div class="mt-8 bg-white rounded-lg shadow-md p-6">
                    <h3 class="text-lg font-medium text-gray-800 mb-4">Scheduled Hearings</h3>
                    <% if (hearings.length > 0) { %>
                        <table class="w-full text-left">
                            <thead>
                                <tr>
                                    <th class="py-2">Case Number</th>
                                    <th class="py-2">Hearing Date</th>
                                    <th class="py-2">Court</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% hearings.forEach(hearing => { %>
                                    <tr class="border-b border-gray-200">
                                        <td class="py-2"><a href="/cases/<%= hearing.case.id %>" class="text-blue-500 hover:underline"><%= hearing.case.caseNumber %></a></td>
                                        <td class="py-2"><%= new Date(hearing.hearingDate).toLocaleString() %></td>
                                        <td class="py-2"><%= hearing.court.name %></td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    <% } else { %>
                        <p>No scheduled hearings.</p>
                    <% } %>
                </div>
            </div>
        </div>
    <% } %>
</body>
</html>
