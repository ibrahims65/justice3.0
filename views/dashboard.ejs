<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body class="bg-gray-100">
  <%- include('partials/navbar', { user: user, page: page }) %>

  <div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
    <%- include('partials/breadcrumbs', { breadcrumbs: breadcrumbs }) %>
    <div class="px-4 py-6 sm:px-0">
      <h2 class="text-2xl font-bold text-gray-800 mb-4">Welcome, <%= user.username %>!</h2>
      <p class="text-gray-600 mb-8">Your role is: <%= user.role.name %></p>

      <form action="/dashboard" method="GET" class="mb-4 flex space-x-2">
        <input type="text" name="search" placeholder="Search..." class="border rounded p-2 flex-grow">
        <% if (user.role.name === 'Police') { %>
          <select name="status" class="border rounded p-2">
            <option value="">All Statuses</option>
            <option value="New Booking">New Booking</option>
            <option value="Information Requested">Information Requested</option>
          </select>
        <% } %>
        <% if (user.role.name === 'Prosecutor') { %>
          <select name="status" class="border rounded p-2">
            <option value="">All Statuses</option>
            <option value="Prosecutor Review">Prosecutor Review</option>
            <option value="Plea Bargain Accepted">Plea Bargain Accepted</option>
          </select>
        <% } %>
        <% if (user.role.name === 'Court') { %>
          <select name="status" class="border rounded p-2">
            <option value="">All Statuses</option>
            <option value="Accepted">Accepted</option>
            <option value="Granted">Bail Granted</option>
            <option value="Denied">Bail Denied</option>
          </select>
        <% } %>
        <% if (user.role.name === 'Corrections') { %>
          <input type="text" name="facility" placeholder="Facility Name" class="border rounded p-2">
        <% } %>
        <button type="submit" class="bg-blue-500 text-white p-2 rounded">Search</button>
      </form>

      <% cases.forEach(caseRecord => { %>
        <% if (caseRecord.status === 'Information Requested' || caseRecord.status === 'Sent Back to Prosecutor') { %>
          <div class="bg-red-500 text-white p-4 rounded mb-4">
            ðŸš¨ RETURNED â€“ Additional Information Required: <a href="/cases/<%= caseRecord.id %>" class="text-white underline"><%= caseRecord.caseNumber %></a>
          </div>
        <% } %>
      <% }) %>
      <% if (user.role.name === 'Police') { %>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <div class="bg-white rounded-lg shadow-md p-6">
            <h3 class="text-lg font-medium text-gray-800">Active Bookings</h3>
            <p class="text-3xl font-bold text-blue-500"><%= bookings.filter(b => b.status === 'New Booking').length %></p>
          </div>
          <div class="bg-white rounded-lg shadow-md p-6">
            <h3 class="text-lg font-medium text-gray-800">Total Bookings</h3>
            <p class="text-3xl font-bold text-blue-500"><%= bookings.length %></p>
          </div>
          <div class="bg-white rounded-lg shadow-md p-6">
            <h3 class="text-lg font-medium text-gray-800">People Registered</h3>
            <p class="text-3xl font-bold text-blue-500"><%= people.length %></p>
          </div>
        </div>
        <div class="mt-8">
          <a href="/people/new" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Register New Person</a>
        </div>
        <div class="mt-8 bg-white rounded-lg shadow-md p-6">
          <h3 class="text-lg font-medium text-gray-800 mb-4">Your Bookings</h3>
          <ul>
            <% bookings.forEach(booking => { %>
              <li class="border-b border-gray-200 py-2"><a href="/people/<%= booking.personId %>" class="text-blue-500 hover:underline">Booking #<%= booking.id %></a> - <%= booking.status %></li>
            <% }) %>
          </ul>
        </div>
        <div class="mt-8 bg-white rounded-lg shadow-md p-6">
          <h3 class="text-lg font-medium text-gray-800 mb-4">Bookings by Status</h3>
          <canvas id="bookingStatusChart" width="400" height="200"></canvas>
        </div>
        <script>
          const bookingStatusData = <%- JSON.stringify(bookings.reduce((acc, booking) => {
            acc[booking.status] = (acc[booking.status] || 0) + 1;
            return acc;
          }, {})) %>;

          const bookingCtx = document.getElementById('bookingStatusChart').getContext('2d');
          new Chart(bookingCtx, {
            type: 'pie',
            data: {
              labels: Object.keys(bookingStatusData),
              datasets: [{
                label: 'Bookings by Status',
                data: Object.values(bookingStatusData),
                backgroundColor: [
                  'rgba(255, 99, 132, 0.7)',
                  'rgba(54, 162, 235, 0.7)',
                  'rgba(255, 206, 86, 0.7)',
                  'rgba(75, 192, 192, 0.7)',
                  'rgba(153, 102, 255, 0.7)',
                  'rgba(255, 159, 64, 0.7)'
                ],
              }]
            },
            options: {
              responsive: true,
              maintainAspectRatio: false,
            }
          });
        </script>
      <% } %>

      <% if (user.role.name === 'Prosecutor') { %>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <div class="bg-white rounded-lg shadow-md p-6">
            <h3 class="text-lg font-medium text-gray-800">Cases for Review</h3>
            <p class="text-3xl font-bold text-yellow-500"><%= cases.filter(c => c.status === 'Prosecutor Review').length %></p>
          </div>
          <div class="bg-white rounded-lg shadow-md p-6">
            <h3 class="text-lg font-medium text-gray-800">Accepted Cases</h3>
            <p class="text-3xl font-bold text-green-500"><%= cases.filter(c => c.status === 'Accepted').length %></p>
          </div>
          <div class="bg-white rounded-lg shadow-md p-6">
            <h3 class="text-lg font-medium text-gray-800">Rejected Cases</h3>
            <p class="text-3xl font-bold text-red-500"><%= cases.filter(c => c.status === 'Rejected').length %></p>
          </div>
        </div>
        <div class="mt-8 bg-white rounded-lg shadow-md p-6">
          <h3 class="text-lg font-medium text-gray-800 mb-4">Cases for Review</h3>
          <ul>
            <% cases.filter(c => c.status === 'Prosecutor Review').forEach(caseRecord => { %>
              <li class="border-b border-gray-200 py-2 flex items-center">
                <img src="<%= caseRecord.booking.person.photoUrl %>" alt="Person Photo" class="w-12 h-12 rounded-full mr-4">
                <div>
                  <a href="/cases/<%= caseRecord.id %>" class="text-blue-500 hover:underline"><%= caseRecord.caseNumber %></a> - <span class="font-semibold"><%= caseRecord.status %></span>
                  <p class="text-sm text-gray-600"><%= caseRecord.booking.person.name %></p>
                </div>
              </li>
            <% }) %>
          </ul>
        </div>
        <div class="mt-8 bg-white rounded-lg shadow-md p-6">
          <h3 class="text-lg font-medium text-gray-800 mb-4">Cases by Status</h3>
          <canvas id="caseStatusChart" width="400" height="200"></canvas>
        </div>
        <script>
          const caseStatusData = <%- JSON.stringify(cases.reduce((acc, caseRecord) => {
            acc[caseRecord.status] = (acc[caseRecord.status] || 0) + 1;
            return acc;
          }, {})) %>;

          const caseCtx = document.getElementById('caseStatusChart').getContext('2d');
          new Chart(caseCtx, {
            type: 'pie',
            data: {
              labels: Object.keys(caseStatusData),
              datasets: [{
                label: 'Cases by Status',
                data: Object.values(caseStatusData),
                backgroundColor: [
                  'rgba(255, 99, 132, 0.7)',
                  'rgba(54, 162, 235, 0.7)',
                  'rgba(255, 206, 86, 0.7)',
                  'rgba(75, 192, 192, 0.7)',
                  'rgba(153, 102, 255, 0.7)',
                  'rgba(255, 159, 64, 0.7)'
                ],
              }]
            },
            options: {
              responsive: true,
              maintainAspectRatio: false,
            }
          });
        </script>
      <% } %>

      <% if (user.role.name === 'Court') { %>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <div class="bg-white rounded-lg shadow-md p-6">
            <h3 class="text-lg font-medium text-gray-800">Upcoming Hearings</h3>
            <p class="text-3xl font-bold text-purple-500"><%= cases.reduce((acc, c) => acc + c.hearings.filter(h => !h.verdict).length, 0) %></p>
          </div>
          <div class="bg-white rounded-lg shadow-md p-6">
            <h3 class="text-lg font-medium text-gray-800">Cases Awaiting Verdict</h3>
            <p class="text-3xl font-bold text-purple-500"><%= cases.filter(c => c.status === 'Accepted' && c.hearings.some(h => !h.verdict)).length %></p>
          </div>
          <div class="bg-white rounded-lg shadow-md p-6">
            <h3 class="text-lg font-medium text-gray-800">Recent Verdicts</h3>
            <p class="text-3xl font-bold text-purple-500"><%= cases.reduce((acc, c) => acc + c.hearings.filter(h => h.verdict).length, 0) %></p>
          </div>
        </div>
        <div class="mt-8 bg-white rounded-lg shadow-md p-6">
          <h3 class="text-lg font-medium text-gray-800 mb-4">Cases for Hearing</h3>
          <ul>
            <% cases.filter(c => c.status === 'Accepted').forEach(caseRecord => { %>
              <li class="border-b border-gray-200 py-2 flex items-center">
                <img src="<%= caseRecord.booking.person.photoUrl %>" alt="Person Photo" class="w-12 h-12 rounded-full mr-4">
                <div>
                  <a href="/cases/<%= caseRecord.id %>" class="text-blue-500 hover:underline"><%= caseRecord.caseNumber %></a> - <span class="font-semibold"><%= caseRecord.status %></span>
                  <p class="text-sm text-gray-600"><%= caseRecord.booking.person.name %></p>
                </div>
              </li>
            <% }) %>
          </ul>
        </div>
        <div class="mt-8 bg-white rounded-lg shadow-md p-6">
          <h3 class="text-lg font-medium text-gray-800 mb-4">Cases by Status</h3>
          <canvas id="courtCaseStatusChart" width="400" height="200"></canvas>
        </div>
        <script>
          const courtCaseStatusData = <%- JSON.stringify(cases.reduce((acc, caseRecord) => {
            acc[caseRecord.status] = (acc[caseRecord.status] || 0) + 1;
            return acc;
          }, {})) %>;

          const courtCaseCtx = document.getElementById('courtCaseStatusChart').getContext('2d');
          new Chart(courtCaseCtx, {
            type: 'pie',
            data: {
              labels: Object.keys(courtCaseStatusData),
              datasets: [{
                label: 'Cases by Status',
                data: Object.values(courtCaseStatusData),
                backgroundColor: [
                  'rgba(255, 99, 132, 0.7)',
                  'rgba(54, 162, 235, 0.7)',
                  'rgba(255, 206, 86, 0.7)',
                  'rgba(75, 192, 192, 0.7)',
                  'rgba(153, 102, 255, 0.7)',
                  'rgba(255, 159, 64, 0.7)'
                ],
              }]
            },
            options: {
              responsive: true,
              maintainAspectRatio: false,
            }
          });
        </script>
      <% } %>

      <% if (user.role.name === 'Corrections') { %>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <div class="bg-white rounded-lg shadow-md p-6">
            <h3 class="text-lg font-medium text-gray-800">Total People</h3>
            <p class="text-3xl font-bold text-indigo-500"><%= people.length %></p>
          </div>
          <div class="bg-white rounded-lg shadow-md p-6">
            <h3 class="text-lg font-medium text-gray-800">People by Status</h3>
            <canvas id="peopleStatusChart" width="400" height="200"></canvas>
          </div>
          <div class="bg-white rounded-lg shadow-md p-6">
            <h3 class="text-lg font-medium text-gray-800">Recent Releases</h3>
            <p class="text-3xl font-bold text-indigo-500">0</p>
          </div>
        </div>
        <div class="mt-8 bg-white rounded-lg shadow-md p-6">
          <h3 class="text-lg font-medium text-gray-800 mb-4">People Records</h3>
          <ul>
            <% people.forEach(person => { %>
              <li class="border-b border-gray-200 py-2"><a href="/people/<%= person.id %>" class="text-blue-500 hover:underline"><%= person.name %></a></li>
            <% }) %>
          </ul>
        </div>
        <script>
          const peopleStatusData = <%- JSON.stringify(people.reduce((acc, person) => {
            const status = person.bookings.find(b => b.case?.status === 'Convicted')?.case.status || 'N/A';
            acc[status] = (acc[status] || 0) + 1;
            return acc;
          }, {})) %>;

          const ctx = document.getElementById('peopleStatusChart').getContext('2d');
          new Chart(ctx, {
            type: 'pie',
            data: {
              labels: Object.keys(peopleStatusData),
              datasets: [{
                label: 'People by Status',
                data: Object.values(peopleStatusData),
                backgroundColor: [
                  'rgba(255, 99, 132, 0.7)',
                  'rgba(54, 162, 235, 0.7)',
                  'rgba(255, 206, 86, 0.7)',
                  'rgba(75, 192, 192, 0.7)',
                  'rgba(153, 102, 255, 0.7)',
                  'rgba(255, 159, 64, 0.7)'
                ],
              }]
            },
            options: {
              responsive: true,
              maintainAspectRatio: false,
            }
          });
        </script>
      <% } %>
    </div>
  </div>
</body>
</html>
