<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body class="bg-gray-100">
  <nav class="bg-white shadow-md">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex items-center justify-between h-16">
        <div class="flex-shrink-0">
          <h1 class="text-2xl font-bold text-gray-800">Justice Platform</h1>
        </div>
        <div class="hidden md:block">
          <div class="ml-10 flex items-baseline space-x-4">
            <a href="/dashboard" class="text-gray-800 hover:bg-gray-200 px-3 py-2 rounded-md text-sm font-medium">Dashboard</a>
            <a href="/auth/logout" class="text-gray-800 hover:bg-gray-200 px-3 py-2 rounded-md text-sm font-medium">Logout</a>
          </div>
        </div>
      </div>
    </div>
  </nav>

  <div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
    <div class="px-4 py-6 sm:px-0">
      <h2 class="text-2xl font-bold text-gray-800 mb-4">Welcome, <%= user.username %>!</h2>
      <p class="text-gray-600 mb-8">Your role is: <%= user.role.name %></p>

      <% if (user.role.name === 'Police') { %>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <div class="bg-white rounded-lg shadow-md p-6">
            <h3 class="text-lg font-medium text-gray-800">Cases in Progress</h3>
            <p class="text-3xl font-bold text-blue-500"><%= cases.filter(c => c.status === 'New Arrest' || c.status === 'Information Requested').length %></p>
          </div>
          <div class="bg-white rounded-lg shadow-md p-6">
            <h3 class="text-lg font-medium text-gray-800">Recent Arrests</h3>
            <p class="text-3xl font-bold text-blue-500"><%= cases.length %></p>
          </div>
          <div class="bg-white rounded-lg shadow-md p-6">
            <h3 class="text-lg font-medium text-gray-800">Evidence Submitted</h3>
            <p class="text-3xl font-bold text-blue-500"><%= cases.reduce((acc, c) => acc + c.evidence.length, 0) %></p>
          </div>
        </div>
        <div class="mt-8">
          <a href="/inmates/new" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Create New Inmate</a>
        </div>
        <div class="mt-8 bg-white rounded-lg shadow-md p-6">
          <h3 class="text-lg font-medium text-gray-800 mb-4">Your Cases</h3>
          <ul>
            <% cases.forEach(caseRecord => { %>
              <li class="border-b border-gray-200 py-2"><a href="/cases/<%= caseRecord.id %>" class="text-blue-500 hover:underline"><%= caseRecord.caseNumber %></a> - <span class="font-semibold"><%= caseRecord.status %></span></li>
            <% }) %>
          </ul>
        </div>
      <% } %>

      <% if (user.role.name === 'Prosecutor') { %>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <div class="bg-white rounded-lg shadow-md p-6">
            <h3 class="text-lg font-medium text-gray-800">Cases for Review</h3>
            <p class="text-3xl font-bold text-yellow-500"><%= cases.filter(c => c.status === 'Prosecutor Review').length %></p>
          </div>
          <div class="bg-white rounded-lg shadow-md p-6">
            <h3 class="text-lg font-medium text-gray-800">Accepted Cases</h3>
            <p class="text-3xl font-bold text-green-500"><%= cases.filter(c => c.status === 'Accepted').length %></p>
          </div>
          <div class="bg-white rounded-lg shadow-md p-6">
            <h3 class="text-lg font-medium text-gray-800">Rejected Cases</h3>
            <p class="text-3xl font-bold text-red-500"><%= cases.filter(c => c.status === 'Rejected').length %></p>
          </div>
        </div>
        <div class="mt-8 bg-white rounded-lg shadow-md p-6">
          <h3 class="text-lg font-medium text-gray-800 mb-4">Cases for Review</h3>
          <ul>
            <% cases.filter(c => c.status === 'Prosecutor Review').forEach(caseRecord => { %>
              <li class="border-b border-gray-200 py-2"><a href="/cases/<%= caseRecord.id %>" class="text-blue-500 hover:underline"><%= caseRecord.caseNumber %></a> - <span class="font-semibold"><%= caseRecord.status %></span></li>
            <% }) %>
          </ul>
        </div>
      <% } %>

      <% if (user.role.name === 'Court') { %>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <div class="bg-white rounded-lg shadow-md p-6">
            <h3 class="text-lg font-medium text-gray-800">Upcoming Hearings</h3>
            <p class="text-3xl font-bold text-purple-500"><%= cases.reduce((acc, c) => acc + c.hearings.filter(h => !h.verdict).length, 0) %></p>
          </div>
          <div class="bg-white rounded-lg shadow-md p-6">
            <h3 class="text-lg font-medium text-gray-800">Cases Awaiting Verdict</h3>
            <p class="text-3xl font-bold text-purple-500"><%= cases.filter(c => c.status === 'Accepted' && c.hearings.some(h => !h.verdict)).length %></p>
          </div>
          <div class="bg-white rounded-lg shadow-md p-6">
            <h3 class="text-lg font-medium text-gray-800">Recent Verdicts</h3>
            <p class="text-3xl font-bold text-purple-500"><%= cases.reduce((acc, c) => acc + c.hearings.filter(h => h.verdict).length, 0) %></p>
          </div>
        </div>
        <div class="mt-8 bg-white rounded-lg shadow-md p-6">
          <h3 class="text-lg font-medium text-gray-800 mb-4">Cases for Hearing</h3>
          <ul>
            <% cases.filter(c => c.status === 'Accepted').forEach(caseRecord => { %>
              <li class="border-b border-gray-200 py-2"><a href="/cases/<%= caseRecord.id %>" class="text-blue-500 hover:underline"><%= caseRecord.caseNumber %></a> - <span class="font-semibold"><%= caseRecord.status %></span></li>
            <% }) %>
          </ul>
        </div>
      <% } %>

      <% if (user.role.name === 'Corrections') { %>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <div class="bg-white rounded-lg shadow-md p-6">
            <h3 class="text-lg font-medium text-gray-800">Total Inmates</h3>
            <p class="text-3xl font-bold text-indigo-500"><%= inmates.length %></p>
          </div>
          <div class="bg-white rounded-lg shadow-md p-6">
            <h3 class="text-lg font-medium text-gray-800">Inmates by Status</h3>
            <canvas id="inmateStatusChart" width="400" height="200"></canvas>
          </div>
          <div class="bg-white rounded-lg shadow-md p-6">
            <h3 class="text-lg font-medium text-gray-800">Recent Releases</h3>
            <p class="text-3xl font-bold text-indigo-500">0</p>
          </div>
        </div>
        <div class="mt-8 bg-white rounded-lg shadow-md p-6">
          <h3 class="text-lg font-medium text-gray-800 mb-4">Inmate Records</h3>
          <ul>
            <% inmates.forEach(inmate => { %>
              <li class="border-b border-gray-200 py-2"><a href="/inmates/<%= inmate.id %>" class="text-blue-500 hover:underline"><%= inmate.name %></a> - <span class="font-semibold"><%= inmate.status %></span></li>
            <% }) %>
          </ul>
        </div>
        <script>
          const inmateStatusData = <%- JSON.stringify(inmates.reduce((acc, inmate) => {
            acc[inmate.status] = (acc[inmate.status] || 0) + 1;
            return acc;
          }, {})) %>;

          const ctx = document.getElementById('inmateStatusChart').getContext('2d');
          new Chart(ctx, {
            type: 'pie',
            data: {
              labels: Object.keys(inmateStatusData),
              datasets: [{
                label: 'Inmates by Status',
                data: Object.values(inmateStatusData),
                backgroundColor: [
                  'rgba(255, 99, 132, 0.7)',
                  'rgba(54, 162, 235, 0.7)',
                  'rgba(255, 206, 86, 0.7)',
                  'rgba(75, 192, 192, 0.7)',
                  'rgba(153, 102, 255, 0.7)',
                  'rgba(255, 159, 64, 0.7)'
                ],
              }]
            },
            options: {
              responsive: true,
              maintainAspectRatio: false,
            }
          });
        </script>
      <% } %>
    </div>
  </div>
</body>
</html>
