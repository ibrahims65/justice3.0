<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Reporting Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body class="bg-gray-100">
  <%- include('../partials/navbar', { user: user, page: page }) %>

  <div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
    <%- include('../partials/breadcrumbs', { breadcrumbs: breadcrumbs }) %>
    <div class="px-4 py-6 sm:px-0">
      <h2 class="text-2xl font-bold text-gray-800 mb-4">Reporting Dashboard</h2>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <div class="bg-white rounded-lg shadow-md p-6">
          <h3 class="text-lg font-medium text-gray-800">Total Cases</h3>
          <p class="text-3xl font-bold text-blue-500"><%= totalCases %></p>
        </div>
        <div class="bg-white rounded-lg shadow-md p-6">
          <h3 class="text-lg font-medium text-gray-800">Total Convictions</h3>
          <p class="text-3xl font-bold text-green-500"><%= totalConvictions %></p>
        </div>
        <div class="bg-white rounded-lg shadow-md p-6">
          <h3 class="text-lg font-medium text-gray-800">Average Case Turnaround Time</h3>
          <p class="text-3xl font-bold text-yellow-500"><%= averageTurnaroundTime %> days</p>
        </div>
      </div>

      <div class="mt-8 grid grid-cols-1 md:grid-cols-2 gap-4">
        <div class="bg-white rounded-lg shadow-md p-6">
          <h3 class="text-lg font-medium text-gray-800 mb-4">Cases by Status</h3>
          <canvas id="caseStatusChart" width="400" height="200"></canvas>
        </div>
        <div class="bg-white rounded-lg shadow-md p-6">
          <h3 class="text-lg font-medium text-gray-800 mb-4">Conviction Rates</h3>
          <canvas id="convictionRateChart" width="400" height="200"></canvas>
        </div>
      </div>
      <div class="mt-8 bg-white rounded-lg shadow-md p-6">
        <h3 class="text-lg font-medium text-gray-800">Recidivism Rate</h3>
        <p class="text-3xl font-bold text-red-500"><%= recidivismRate.toFixed(2) %>%</p>
      </div>
    </div>
  </div>

  <script>
    const caseStatusData = <%- JSON.stringify(caseStatusCounts) %>;
    const convictionRateData = <%- JSON.stringify(convictionRate) %>;

    const caseStatusCtx = document.getElementById('caseStatusChart').getContext('2d');
    new Chart(caseStatusCtx, {
      type: 'pie',
      data: {
        labels: Object.keys(caseStatusData),
        datasets: [{
          label: 'Cases by Status',
          data: Object.values(caseStatusData),
          backgroundColor: [
            'rgba(255, 99, 132, 0.7)',
            'rgba(54, 162, 235, 0.7)',
            'rgba(255, 206, 86, 0.7)',
            'rgba(75, 192, 192, 0.7)',
            'rgba(153, 102, 255, 0.7)',
            'rgba(255, 159, 64, 0.7)'
          ],
        }]
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,
      }
    });

    const convictionRateCtx = document.getElementById('convictionRateChart').getContext('2d');
    new Chart(convictionRateCtx, {
      type: 'bar',
      data: {
        labels: ['Convicted', 'Not Convicted'],
        datasets: [{
          label: 'Conviction Rate',
          data: [convictionRateData, 100 - convictionRateData],
          backgroundColor: [
            'rgba(75, 192, 192, 0.7)',
            'rgba(255, 99, 132, 0.7)',
          ],
        }]
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,
        scales: {
          y: {
            beginAtZero: true,
            max: 100
          }
        }
      }
    });
  </script>
</body>
</html>
