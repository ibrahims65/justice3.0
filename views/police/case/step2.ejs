<div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
  <%- include('../../partials/breadcrumbs', { current: 'New Case - Step 2' }) %>

  <div class="px-4 py-6 sm:px-0">
    <h2 class="text-2xl font-bold text-gray-800 mb-8">New Case - Step 2: Case Details</h2>

    <div class="w-full bg-gray-200 rounded-full h-2.5 dark:bg-gray-700">
      <div class="bg-blue-600 h-2.5 rounded-full" style="width: 66%"></div>
    </div>

    <form action="/police/cases/new/step2" method="POST">
      <div class="bg-white shadow overflow-hidden sm:rounded-lg p-8 mt-8">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <div>
            <label for="caseNumber" class="block text-sm font-medium text-gray-700">Case Number</label>
            <input type="text" name="caseNumber" id="caseNumber" class="mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" required>
          </div>
          <input type="hidden" name="status" value="New Arrest">
          <div>
            <label for="policeStationId" class="block text-sm font-medium text-gray-700">Police Station</label>
            <select name="policeStationId" id="policeStationId" class="mt-1 block w-full py-2 px-3 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" required>
              <% policeStations.forEach(station => { %>
                <option value="<%= station.id %>"><%= station.name %></option>
              <% }) %>
            </select>
          </div>
          <div>
            <label for="charges" class="block text-sm font-medium text-gray-700">Charges</label>
            <input type="text" name="charges" id="charges" class="mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md">
          </div>
          <div>
            <label for="custodyExpiresAt" class="block text-sm font-medium text-gray-700">Custody Expires At</label>
            <input type="datetime-local" name="custodyExpiresAt" id="custodyExpiresAt" class="mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md">
          </div>
          <div class="md:col-span-2">
            <label for="officerNotes" class="block text-sm font-medium text-gray-700">Officer Notes</label>
            <textarea name="officerNotes" id="officerNotes" rows="4" class="mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md"></textarea>
          </div>
        </div>
        <div class="mt-8 flex justify-between">
          <a href="/police/cases/new/step1" class="bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded">Back</a>
          <div>
            <a href="/police/management" class="bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded mr-4">Cancel</a>
            <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Next</button>
          </div>
        </div>
      </div>
    </form>
  </div>
</div>
