<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Police Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <link href="/css/custom.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body class="bg-gray-100">
  <%- include('../partials/navbar', { user: user, page: page }) %>

  <div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
    <div class="px-4 py-6 sm:px-0">
      <h2 class="text-2xl font-bold text-gray-800 mb-4">Welcome, <%= user.username %>!</h2>
      <p class="text-gray-600 mb-8">Your role is: <%= user.role.name %></p>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="bg-white rounded-lg shadow-md p-6">
          <h3 class="text-lg font-medium text-gray-800 mb-4">KPIs</h3>
          <p><strong>Total Bookings Today:</strong> 5</p>
          <p><strong>Pending Submissions:</strong> 10</p>
          <p><strong>Overdue Holds:</strong> 3</p>
        </div>
        <div class="bg-white rounded-lg shadow-md p-6">
          <h3 class="text-lg font-medium text-gray-800 mb-4">Alerts & Flags</h3>
          <ul>
            <% idleBookings.forEach(booking => { %>
              <li class="border-b border-gray-200 py-2">
                <p class="text-red-500">Booking #<%= booking.id %> has been idle for >24 hours.</p>
              </li>
            <% }) %>
            <% missingSubmission.forEach(booking => { %>
              <li class="border-b border-gray-200 py-2">
                <p class="text-red-500">Booking #<%= booking.id %> is missing prosecutor submission.</p>
              </li>
            <% }) %>
            <% pendingRemandRequests.forEach(remand => { %>
              <li class="border-b border-gray-200 py-2">
                <p class="text-red-500">Remand Request #<%= remand.id %> is pending.</p>
              </li>
            <% }) %>
          </ul>
        </div>
        <div class="bg-white rounded-lg shadow-md p-6">
          <h3 class="text-lg font-medium text-gray-800 mb-4">Quick Actions</h3>
          <div class="grid grid-cols-1 gap-4">
            <a href="/people/new" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded text-center">Add New Booking</a>
            <a href="/police/people" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded text-center">Search Person</a>
            <a href="/police/bookings" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded text-center">View Pending Submissions</a>
            <a href="/police/bookings?status=New+Booking" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded text-center">View Open Bookings</a>
            <a href="/police/remands" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded text-center">Request Remand</a>
          </div>
        </div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mt-8">
        <div class="bg-white rounded-lg shadow-md p-6">
          <h3 class="text-lg font-medium text-gray-800 mb-4">Booking Trends</h3>
          <canvas id="bookingTrendsChart"></canvas>
        </div>
        <div class="bg-white rounded-lg shadow-md p-6">
          <h3 class="text-lg font-medium text-gray-800 mb-4">Case Submission Status</h3>
          <canvas id="caseSubmissionStatusChart"></canvas>
        </div>
      </div>

    </div>
  </div>

  <script>
    const bookingTrendsCtx = document.getElementById('bookingTrendsChart').getContext('2d');
    new Chart(bookingTrendsCtx, {
      type: 'line',
      data: {
        labels: ['January', 'February', 'March', 'April', 'May', 'June', 'July'],
        datasets: [{
          label: 'Bookings',
          data: [65, 59, 80, 81, 56, 55, 40],
          fill: false,
          borderColor: 'rgb(75, 192, 192)',
          tension: 0.1
        }]
      }
    });

    const caseSubmissionStatusCtx = document.getElementById('caseSubmissionStatusChart').getContext('2d');
    new Chart(caseSubmissionStatusCtx, {
      type: 'pie',
      data: {
        labels: ['Submitted', 'Pending Review', 'Rejected'],
        datasets: [{
          label: 'Case Submission Status',
          data: [12, 19, 3],
          backgroundColor: [
            'rgb(54, 162, 235)',
            'rgb(255, 205, 86)',
            'rgb(255, 99, 132)'
          ],
          hoverOffset: 4
        }]
      }
    });
  </script>

</body>
</html>
