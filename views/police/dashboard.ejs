<%- include('../partials/header') %>

<div class="container mx-auto p-4">
  <%- include('../partials/breadcrumbs', { path: req.path }) %>

  <h1 class="text-2xl font-bold my-4">Police Dashboard</h1>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
    <%- include('../partials/card', { title: 'Overdue Bookings', count: overdueBookings.length, data: overdueBookings.map(b => ({ message: `${b.person.name} - Case #${b.case.caseNumber}`})) }) %>
    <%- include('../partials/card', { title: 'Alerts', count: alerts.length, data: alerts.map(a => ({ message: a.message })) }) %>
    <%- include('../partials/card', { title: 'Recent Activity', count: recentActivity.length, data: recentActivity.map(b => ({ message: `${b.person.name} - Case #${b.case.caseNumber}`})) }) %>
  </div>
</div>

<%- include('../partials/footer') %>
