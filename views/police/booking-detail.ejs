<div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
  <div class="bg-white rounded-lg shadow-md p-8">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <div class="md:col-span-2">
        <div class="flex justify-between items-start">
          <div>
            <h2 class="text-3xl font-bold text-gray-800">Booking #<%= booking.id %></h2>
            <p class="text-lg text-gray-600">
              <span class="badge
                <% if (booking.status === 'Accepted' || booking.status === 'Convicted') { %> badge-success <% } %>
                <% if (booking.status === 'Rejected' || booking.status === 'Denied') { %> badge-danger <% } %>
                <% if (booking.status === 'Information Requested' || booking.status === 'Sent Back to Prosecutor') { %> badge-warning <% } %>
              ">
                <%= booking.status %>
              </span>
            </p>
          </div>
          <div class="text-right">
            <p class="text-gray-600">Booking Date: <%= booking.bookingDate.toLocaleString() %></p>
          </div>
        </div>

        <div class="mt-8">
          <h3 class="text-xl font-bold text-gray-800 mb-4">Person Details</h3>
          <p><strong>Name:</strong> <a href="/police/people/<%= booking.person.id %>" class="text-blue-500 hover:underline"><%= booking.person.name %></a></p>
          <p><strong>Date of Birth:</strong> <%= booking.person.dob.toDateString() %></p>
        </div>

        <div class="mt-8">
          <h3 class="text-xl font-bold text-gray-800 mb-4">Booking Details</h3>
          <p><strong>Arresting Officer:</strong> <%= booking.arrestingOfficerName %> (<%= booking.arrestingOfficerRank %>)</p>
          <p><strong>Charges:</strong> <%= booking.charges %></p>
        </div>

        <% if (booking.case) { %>
          <div class="mt-8">
            <h3 class="text-xl font-bold text-gray-800 mb-4">Case Details</h3>
            <p><strong>Case Number:</strong> <a href="/cases/<%= booking.case.id %>" class="text-blue-500 hover:underline"><%= booking.case.caseNumber %></a></p>
          </div>
        <% } %>
      </div>
      <div class="md:col-span-1">
        <h3 class="text-xl font-bold text-gray-800 mb-4">Actions</h3>
        <div class="flex flex-col space-y-2">
          <% if (booking.case && (booking.case.status === 'New Arrest' || booking.case.status === 'Information Requested')) { %>
            <form action="/cases/<%= booking.case.id %>/submit" method="POST">
              <button type="submit" class="w-full bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded">Submit to Prosecutor</button>
            </form>
          <% } %>
          <a href="/police/bookings/<%= booking.id %>/remand/new" class="w-full bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded text-center">Request Remand</a>
          <a href="/police/bookings/<%= booking.id %>/evidence/new" class="w-full bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded text-center">Add Evidence</a>
        </div>
      </div>
    </div>
  </div>
</div>
