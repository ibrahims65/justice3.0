<div class="container mx-auto p-4" x-data="{ tab: 'arrests' }">
    <h1 class="text-4xl font-bold"><%= caseRecord.title %></h1>
    <p class="mt-2 text-lg text-gray-600"><%= caseRecord.description %></p>
    <p class="mt-2 text-sm text-gray-500">Status: <%= caseRecord.status %></p>

    <div class="mt-8">
        <div class="border-b border-gray-200">
            <nav class="-mb-px flex space-x-8" aria-label="Tabs">
                <a href="#" @click.prevent="tab = 'arrests'" :class="{ 'border-indigo-500 text-indigo-600': tab === 'arrests', 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300': tab !== 'arrests' }" class="whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm">
                    Arrests
                </a>
                <a href="#" @click.prevent="tab = 'evidence'" :class="{ 'border-indigo-500 text-indigo-600': tab === 'evidence', 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300': tab !== 'evidence' }" class="whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm">
                    Evidence
                </a>
                <!-- Add other tabs here -->
            </nav>
        </div>
    </div>

    <div class="mt-8">
        <div x-show="tab === 'arrests'">
            <h2 class="text-2xl font-bold">Arrest Details</h2>
            <% caseRecord.arrests.forEach(arrest => { %>
                <div class="mt-4 p-4 bg-white rounded-lg shadow">
                    <p><strong>Officer ID:</strong> <%= arrest.officerId %></p>
                    <p><strong>Person ID:</strong> <%= arrest.personId %></p>
                    <p><strong>Date:</strong> <%= new Date(arrest.arrestedAt).toLocaleString() %></p>
                    <p><strong>Location:</strong> <%= arrest.location %></p>
                    <p><strong>Notes:</strong> <%= arrest.notes %></p>
                </div>
            <% }) %>
        </div>

        <div x-show="tab === 'evidence'">
            <h2 class="text-2xl font-bold mb-4">Evidence</h2>
            <div class="mb-8">
                <%- include('../partials/evidence-list', { caseRecord: caseRecord }) %>
            </div>
            <h3 class="text-xl font-bold mb-4">Add New Evidence</h3>
            <%- include('../partials/evidence-form', { caseRecord: caseRecord }) %>
        </div>
    </div>
</div>
