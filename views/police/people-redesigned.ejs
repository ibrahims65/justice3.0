<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>People Intelligence</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <link href="/css/custom.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js" defer></script>
  <script src="https://cdn.jsdelivr.net/npm/@alpinejs/collapse@3.x.x/dist/cdn.min.js" defer></script>
</head>
<body class="bg-gray-900 text-white" x-data="{ activeTile: null, search: '', caseModal: false, selectedCase: null, people: <%= JSON.stringify(people) %>, cases: [], showCasePanel: false, showFilters: false, expandedCase: null }">
  <%- include('../partials/navbar', { user: user, page: page }) %>
  <div class="watermark"></div>
  <div class="flex h-screen pt-16">
    <div class="w-full bg-gray-900 p-8">
      <div class="flex justify-between items-center mb-8">
        <h1 class="text-4xl font-bold">People Intelligence</h1>
        <button @click="showFilters = !showFilters" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">üîç Filter/Search</button>
      </div>
      <div id="filter-panel" class="absolute top-0 left-0 w-full bg-white shadow-lg hidden" x-show="showFilters" @click.away="showFilters = false">
        <div class="p-8">
          <h2 class="text-2xl font-bold mb-8 text-black">Filters</h2>
          <form>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
              <div>
                <label for="search" class="block text-sm font-medium text-black">Search</label>
                <input type="text" name="search" id="search" class="w-full bg-gray-200 border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" x-model="search">
              </div>
              <div>
                <label for="role" class="block text-sm font-medium text-black">Role</label>
                <select id="role" name="role" class="w-full bg-gray-200 border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
                  <option value="">All</option>
                  <option value="Suspect">Suspect</option>
                  <option value="Victim">Victim</option>
                  <option value="Witness">Witness</option>
                  <option value="Officer">Officer</option>
                </select>
              </div>
              <div>
                <label for="bookingStatus" class="block text-sm font-medium text-black">Booking Status</label>
                <select id="bookingStatus" name="bookingStatus" class="w-full bg-gray-200 border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
                  <option value="">All</option>
                  <option value="In Custody">In Custody</option>
                  <option value="Released">Released</option>
                  <option value="Overdue Hold">Overdue Hold</option>
                </select>
              </div>
              <div>
                <label for="caseStatus" class="block text-sm font-medium text-black">Case Status</label>
                <select id="caseStatus" name="caseStatus" class="w-full bg-gray-200 border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
                  <option value="">All</option>
                  <option value="Active">Active</option>
                  <option value="Submitted">Submitted</option>
                  <option value="Rejected">Rejected</option>
                </select>
              </div>
              <div>
                <label for="gender" class="block text-sm font-medium text-black">Gender</label>
                <select id="gender" name="gender" class="w-full bg-gray-200 border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
                  <option value="">All</option>
                  <option value="Male">Male</option>
                  <option value="Female">Female</option>
                </select>
              </div>
            </div>
            <div class="mt-8 flex justify-end">
              <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Filter</button>
            </div>
          </form>
        </div>
      </div>
    <div class="w-1/2 bg-gray-900 p-8">
      <h1 class="text-4xl font-bold mb-8">People Intelligence</h1>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <template x-for="person in people.filter(p => p.name.toLowerCase().includes(search.toLowerCase()))">
          <div class="person-card bg-gray-800 p-4 rounded-lg cursor-pointer hover:border-blue-500 border-2 border-transparent" @click="activeTile = person.id === activeTile ? null : person.id">
            <div class="flex items-center">
              <img :src="person.photoUrl || '/images/default-avatar.png'" alt="Photo" class="w-10 h-10 rounded-full mr-4">
              <h3 class="text-lg font-bold" x-text="person.name"></h3>
            </div>
            <p class="text-sm text-gray-400" x-text="'ID: ' + person.id"></p>
            <p class="text-sm">Roles: N/A</p>
            <p class="text-sm" x-text="'Bookings: ' + person.bookings.length"></p>
            <p class="text-sm" x-text="'Last Seen: ' + new Date(person.bookings[0] ? person.bookings[0].bookingDate : person.createdAt).toLocaleString()"></p>
            <template x-if="person.bookings.some(b => new Date(b.bookingDate) < new Date(Date.now() - 24 * 60 * 60 * 1000) && b.status === 'New Arrest')">
              <span class="urgency-flag bg-red-500 text-white text-xs font-bold mr-2 px-2.5 py-0.5 rounded-full">Overdue Hold</span>
            </template>
            <div class="mt-4">
              <a :href="'/print/wrapsheet/' + person.id" class="action-button">View Wrap Sheet</a>
              <a :href="'/people/' + person.id + '/bookings/new'" class="action-button">Add Booking</a>
              <button class="action-button">Flag for Review</button>
              <button @click="showCasePanel = true; fetchCases(person.id)" class="action-button">Open Case Summary</button>
            </div>
          </div>
        </template>
      </div>
    </div>
    <div class="w-1/4 bg-gray-800 p-8">
      <div class="mb-8">
        <h3 class="text-xl font-bold mb-4">Active Case Summary</h3>
        <p><strong>Total Active Cases:</strong> 5</p>
      </div>
      <div class="mb-8">
        <h3 class="text-xl font-bold mb-4">Recent Activity Feed</h3>
        <ul>
          <li class="border-b border-gray-600 py-2">New Booking: John Doe</li>
          <li class="border-b border-gray-600 py-2">Case Submitted: Jane Smith</li>
        </ul>
      </div>
      <div class="mb-8">
        <h3 class="text-xl font-bold mb-4">Role Breakdown</h3>
        <canvas id="roleBreakdownChart"></canvas>
      </div>
      <div>
        <h3 class="text-xl font-bold mb-4">Urgency Alerts</h3>
        <ul>
          <li class="text-red-500">Booking #1234: Overdue Hold</li>
        </ul>
      </div>
    </div>
  </div>

  <div class="fixed top-0 right-0 h-full w-1/3 bg-gray-800 p-8 transform transition-transform duration-300 ease-in-out" :class="{ 'translate-x-0': expandedCase, 'translate-x-full': !expandedCase }">
    <div class="flex justify-between items-center mb-8">
      <h2 class="text-2xl font-bold">Case Details</h2>
      <button @click="expandedCase = null" class="text-white">&times;</button>
    </div>
    <div class="expanded-case-panel overflow-y-auto">
      <template x-if="expandedCase">
        <div>
          <h4 x-text="expandedCase.caseNumber"></h4>
          <p><strong>Crime:</strong> N/A</p>
          <p><strong>Status:</strong> <span x-text="expandedCase.status"></span></p>
          <p><strong>Booking Date:</strong> <span x-text="new Date(expandedCase.booking.bookingDate).toLocaleString()"></span></p>
        </div>
      </template>
    </div>
  </div>

  <div class="fixed top-0 right-0 h-full w-1/3 bg-gray-800 p-8 transform transition-transform duration-300 ease-in-out" :class="{ 'translate-x-0': showCasePanel, 'translate-x-full': !showCasePanel }">
    <div class="flex justify-between items-center mb-8">
      <h2 class="text-2xl font-bold">Cases</h2>
      <button @click="showCasePanel = false" class="text-white">&times;</button>
    </div>
    <div class="case-panel overflow-y-auto">
      <template x-for="caseRecord in cases" :key="caseRecord.id">
        <div class="case-card bg-gray-700 p-4 rounded-lg mb-4 cursor-pointer" @click="expandedCase = caseRecord">
          <p><strong>Booking Date:</strong> <span x-text="new Date(caseRecord.booking.bookingDate).toLocaleString()"></span></p>
          <p><strong>Crime:</strong> N/A</p>
          <p><strong>Case #:</strong> <a :href="'/cases/' + caseRecord.id" x-text="caseRecord.caseNumber" class="text-blue-500 hover:underline"></a></p>
          <p><strong>Status:</strong> <span x-text="caseRecord.status"></span></p>
        </div>
      </template>
    </div>
  </div>
  <script>
    function fetchCases(personId) {
      fetch(`/people/${personId}/cases`)
        .then(response => response.json())
        .then(data => {
          this.cases = data;
          this.showCasePanel = true;
        });
    }

    const roleBreakdownCtx = document.getElementById('roleBreakdownChart').getContext('2d');
    new Chart(roleBreakdownCtx, {
      type: 'doughnut',
      data: {
        labels: ['Suspect', 'Victim', 'Witness', 'Officer'],
        datasets: [{
          label: 'Role Breakdown',
          data: [12, 19, 3, 5],
          backgroundColor: [
            'rgb(255, 99, 132)',
            'rgb(54, 162, 235)',
            'rgb(255, 205, 86)',
            'rgb(75, 192, 192)'
          ],
          hoverOffset: 4
        }]
      }
    });
  </script>

  <div class="fixed bottom-0 left-0 right-0 bg-gray-800 p-4">
    <p class="text-center text-gray-400">"Whoever saves one life, it is as if he had saved mankind entirely."</p>
  </div>

  <div class="fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full" x-show="caseModal">
    <div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-md bg-white text-black">
      <div class="mt-3 text-center">
        <template x-if="selectedCase">
          <div>
            <h3 class="text-lg leading-6 font-medium text-gray-900" x-text="'Case #' + selectedCase.caseNumber"></h3>
            <div class="mt-2 px-7 py-3">
              <p><strong>Status:</strong> <span x-text="selectedCase.status"></span></p>
              <p><strong>Booking ID:</strong> <span x-text="selectedCase.bookingId"></span></p>
            </div>
          </div>
        </template>
        <div class="items-center px-4 py-3">
          <button @click="caseModal = false" class="px-4 py-2 bg-gray-500 text-white text-base font-medium rounded-md w-full shadow-sm hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-gray-300">
            Close
          </button>
        </div>
      </div>
    </div>
  </div>
</body>
</html>
