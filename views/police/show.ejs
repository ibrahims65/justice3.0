<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Person Profile</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">
  <%- include('../partials/navbar', { user: user, page: page }) %>

  <div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
    <%- include('../partials/breadcrumbs', { breadcrumbs: breadcrumbs }) %>
    <div class="px-4 py-6 sm:px-0">
      <div class="flex justify-between items-center mb-4">
        <h2 class="text-2xl font-bold text-gray-800">Person Profile</h2>
        <a href="/police/people" class="text-blue-500 hover:underline">Back to People</a>
      </div>

      <div class="bg-white rounded-lg shadow-md p-6">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <div class="md:col-span-1">
            <img src="<%= person.photoUrl %>" alt="Person Photo" class="w-full rounded-lg">
          </div>
          <div class="md:col-span-2">
            <h3 class="text-xl font-bold mb-2"><%= person.name %></h3>
            <p><strong>Date of Birth:</strong> <%= new Date(person.dateOfBirth).toLocaleDateString() %></p>
            <p><strong>Gender:</strong> <%= person.gender %></p>
            <p><strong>Address:</strong> <%= person.address %></p>
            <p><strong>Contact:</strong> <%= person.contact %></p>
          </div>
        </div>
      </div>

      <div class="mt-8 bg-white rounded-lg shadow-md p-6">
        <h3 class="text-xl font-bold mb-4">Bookings</h3>
        <table class="w-full text-left">
          <thead>
            <tr>
              <th class="py-2">Booking ID</th>
              <th class="py-2">Booking Date</th>
              <th class="py-2">Status</th>
              <th class="py-2">Case Number</th>
            </tr>
          </thead>
          <tbody>
            <% person.bookings.forEach(booking => { %>
              <tr class="border-b border-gray-200">
                <td class="py-2"><%= booking.id %></td>
                <td class="py-2"><%= new Date(booking.bookingDate).toLocaleDateString() %></td>
                <td class="py-2"><%= booking.status %></td>
                <td class="py-2"><%= booking.case ? booking.case.caseNumber : 'N/A' %></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>

      <div class="mt-8 bg-white rounded-lg shadow-md p-6">
        <h3 class="text-xl font-bold mb-4">Remand Requests</h3>
        <table class="w-full text-left">
          <thead>
            <tr>
              <th class="py-2">Request ID</th>
              <th class="py-2">Request Date</th>
              <th class="py-2">Status</th>
              <th class="py-2">Reason</th>
            </tr>
          </thead>
          <tbody>
            <% person.bookings.forEach(booking => { %>
              <% booking.remandRequests.forEach(remand => { %>
                <tr class="border-b border-gray-200">
                  <td class="py-2"><%= remand.id %></td>
                  <td class="py-2"><%= new Date(remand.requestDate).toLocaleDateString() %></td>
                  <td class="py-2"><%= remand.status %></td>
                  <td class="py-2"><%= remand.reason %></td>
                </tr>
              <% }) %>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</body>
</html>
