<%- include('../partials/header', { title: 'Active Warrants', user: user, page: '/warrants' }) %>
<div class="container mx-auto p-4">
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
    <% warrants.forEach(warrant => { %>
      <div class="bg-white rounded-lg shadow-md p-6">
        <h3 class="text-lg font-medium text-gray-800"><%= warrant.case.caseNumber %></h3>
        <p class="text-gray-600"><%= warrant.case.booking.person.name %></p>
        <p class="mt-4"><%= warrant.details %></p>
        <p class="mt-4 text-sm text-gray-500">Expires: <%= warrant.expiresAt.toLocaleString() %></p>
        <div class="mt-4">
          <form action="/warrants/<%= warrant.id %>/execute" method="POST">
            <button type="submit" class="w-full bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded">Mark as Executed</button>
          </form>
        </div>
      </div>
    <% }) %>
  </div>
</div>
