<%- include('../partials/header', { title: 'Active Warrants', user: user, page: '/warrants' }) %>
<div class="container mx-auto p-4">
  <table class="w-full border">
      <thead>
        <tr>
          <th class="border p-2">Case Number</th>
          <th class="border p-2">Suspect</th>
          <th class="border p-2">Details</th>
          <th class="border p-2">Expires At</th>
          <th class="border p-2">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% warrants.forEach(warrant => { %>
          <tr>
            <td class="border p-2"><a href="/cases/<%= warrant.case.id %>" class="text-blue-500 hover:underline"><%= warrant.case.caseNumber %></a></td>
            <td class="border p-2"><%= warrant.case.booking.person.name %></td>
            <td class="border p-2"><%= warrant.details %></td>
            <td class="border p-2"><%= warrant.expiresAt.toLocaleString() %></td>
            <td class="border p-2">
              <form action="/warrants/<%= warrant.id %>/execute" method="POST">
                <button type="submit" class="bg-green-500 text-white p-1 rounded">Mark as Executed</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>
