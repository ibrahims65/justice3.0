<%- include('partials/header') %>

<div class="bg-gray-100 min-h-screen flex items-center justify-center">
  <div class="bg-white shadow-lg rounded-lg p-8 max-w-md w-full text-center">
    <h1 class="text-4xl font-bold text-red-600 mb-4">Error</h1>
    <p class="text-gray-700 mb-6"><%= message %></p>
    <% if (error && error.stack) { %>
      <div class="bg-gray-200 text-left p-4 rounded-lg text-sm text-gray-600 overflow-auto max-h-64">
        <pre><code><%= error.stack %></code></pre>
      </div>
    <% } %>
    <a href="/" class="mt-8 inline-block bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
      Go to Homepage
    </a>
  </div>
</div>

<%- include('partials/footer') %>
