<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>People</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">
  <%- include('../partials/navbar', { user: user, page: page }) %>

  <div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
    <%- include('../partials/breadcrumbs', { breadcrumbs: breadcrumbs }) %>
    <div class="px-4 py-6 sm:px-0">
      <h2 class="text-2xl font-bold text-gray-800 mb-4">People</h2>

      <div class="bg-white p-6 rounded-lg shadow-md mb-8">
        <form action="/people" method="GET">
          <div class="flex space-x-2">
            <input type="text" name="name" placeholder="Search by name..." class="w-full border rounded p-2">
            <button type="submit" class="bg-blue-500 text-white p-2 rounded">Search</button>
            <button type="button" id="advanced-search-toggle" class="bg-gray-500 text-white p-2 rounded">Advanced Search</button>
          </div>
          <div id="advanced-search-form" class="hidden mt-4">
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
              <input type="text" name="id" placeholder="ID" class="border rounded p-2">
              <input type="text" name="gender" placeholder="Gender" class="border rounded p-2">
              <input type="number" name="age" placeholder="Age" class="border rounded p-2">
              <input type="date" name="registrationDate" placeholder="Registration Date" class="border rounded p-2">
            </div>
          </div>
        </form>
      </div>

      <div class="bg-white p-6 rounded-lg shadow-md">
        <table class="w-full">
          <thead>
            <tr>
              <th class="text-left">Name</th>
              <th class="text-left">ID</th>
              <th class="text-left">Gender</th>
              <th class="text-left">Age</th>
              <th class="text-left">Registration Date</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% people.forEach(person => { %>
              <tr>
                <td><%= person.name %></td>
                <td><%= person.id %></td>
                <td><%= person.gender %></td>
                <td><%= new Date().getFullYear() - new Date(person.dob).getFullYear() %></td>
                <td><%= new Date(person.createdAt).toLocaleDateString() %></td>
                <td>
                  <div class="relative inline-block text-left">
                    <div>
                      <button type="button" class="inline-flex justify-center w-full rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-100 focus:ring-indigo-500" id="options-menu" aria-haspopup="true" aria-expanded="true">
                        Actions
                        <svg class="-mr-1 ml-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                          <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
                        </svg>
                      </button>
                    </div>
                    <div class="origin-top-right absolute right-0 mt-2 w-56 rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5 hidden">
                      <div class="py-1" role="menu" aria-orientation="vertical" aria-labelledby="options-menu">
                        <a href="/people/<%= person.id %>/bookings/new" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 hover:text-gray-900" role="menuitem">Add Charge</a>
                        <% if (person.bookings && person.bookings.length > 0) { %>
                          <a href="/cases/new/<%= person.bookings[0].id %>" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 hover:text-gray-900" role="menuitem">Start Case</a>
                        <% } %>
                        <a href="/people/<%= person.id %>" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 hover:text-gray-900" role="menuitem">View Profile</a>
                      </div>
                    </div>
                  </div>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
        <div class="mt-4 flex justify-between">
            <div>
                <% if (currentPage > 1) { %>
                <a href="/people?page=<%= currentPage - 1 %>" class="bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded-l">
                    Prev
                </a>
                <% } %>
            </div>
            <div>
                <% if (currentPage < totalPages) { %>
                <a href="/people?page=<%= currentPage + 1 %>" class="bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded-r">
                    Next
                </a>
                <% } %>
            </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    const dropdowns = document.querySelectorAll('.relative');
    dropdowns.forEach(dropdown => {
      const button = dropdown.querySelector('button');
      const menu = dropdown.querySelector('.hidden');
      button.addEventListener('click', (event) => {
        event.stopPropagation();
        menu.classList.toggle('hidden');
      });
    });

    window.addEventListener('click', () => {
      dropdowns.forEach(dropdown => {
        const menu = dropdown.querySelector('.hidden');
        if (!menu.classList.contains('hidden')) {
          menu.classList.add('hidden');
        }
      });
    });

    const advancedSearchToggle = document.getElementById('advanced-search-toggle');
    const advancedSearchForm = document.getElementById('advanced-search-form');
    advancedSearchToggle.addEventListener('click', () => {
      advancedSearchForm.classList.toggle('hidden');
    });
  </script>
</body>
</html>
